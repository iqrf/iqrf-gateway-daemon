{
    "$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
    "self": {
        "vendor": "com.iqrftech.self-desc",
        "name": "schema__iqrf__MonitorService",
        "format": "jsonschema",
        "version": "1-0-0"
    },
    "type": "object",
    "required": [
        "component",
        "instance",
        "reportPeriod",
        "port",
        "acceptOnlyLocalhost",
        "tlsEnabled",
        "tlsMode",
        "cert",
        "privKey"
    ],
    "additionalProperties": false,
    "properties": {
        "component": {
            "type": "string",
            "description": "Name of component.",
            "enum": [
                "iqrf::MonitorService"
            ]
        },
        "instance": {
            "type": "string",
            "description": "Recomended iqrf::MonitorService-(id)",
            "default": "iqrf::MonitorService-1"
        },
        "reportPeriod": {
            "type": "number",
            "description": "report period in seconds",
            "default": 10
        },
        "port":  {
            "type": "integer",
            "description": "Server port number",
            "default": 1438,
            "minimum": 1024,
            "maximum": 65535
        },
        "acceptOnlyLocalhost": {
            "type": "boolean",
            "description": "Only accept localhost connections"
        },
        "tlsEnabled": {
            "type": "boolean",
            "description": "Enable TLS"
        },
        "tlsMode": {
            "type": "integer",
            "description": "TLS configuration (0 - modern, 1 - intermediate, 2 - old)",
            "enum": [0, 1, 2]
        },
        "cert": {
            "type": "string",
            "description": "Certificate file"
        },
        "privKey": {
            "type": "string",
            "description": "Private key file"
        }
    }
}

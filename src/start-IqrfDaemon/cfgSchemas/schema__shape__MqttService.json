{
    "$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/latest/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
    "self": {
        "vendor": "com.iqrftech.self-desc",
        "name": "schema__shape__MqttService",
        "format": "jsonschema",
        "version": "1-0-0"
    },
    "type": "object",
    "properties": {
        "component": {
            "type": "string",
            "description": "Name of component.",
            "enum": [
                "shape::MqttService"
            ]
        },
        "instance": {
            "type": "string",
            "description": "Recommended shape::MqttService-(id)",
            "default": "shape::MqttService-1",
            "minLength": 1
        },
        "BrokerAddr": {
            "type": "string",
            "description": "Broker adddress",
            "default": "tcp://127.0.0.1:1883"
        },
        "Persistence": {
            "type": "integer",
            "description": "Persistence",
            "default": 1
        },
        "Qos": {
            "type": "integer",
            "description": "QoS",
            "default": 1,
            "enum": [0, 1, 2]
        },
        "User": {
            "type": "string",
            "description": "Username",
            "default": ""
        },
        "Password": {
            "type": "string",
            "description": "Password",
            "default": ""
        },
        "EnabledSSL": {
            "type": "boolean",
            "description": "Enable TLS",
            "default": false
        },
        "KeepAliveInterval": {
            "type": "integer",
            "description": "Keep alive interval",
            "default": 20
        },
        "ConnectTimeout": {
            "type": "integer",
            "description": "Connection timeout",
            "default": 5
        },
        "MinReconnect": {
            "type": "integer",
            "description": "Minimal count of reconnects",
            "default": 1
        },
        "MaxReconnect": {
            "type": "integer",
            "description": "Maximal count of reconnects",
            "default": 64
        },
        "TrustStore": {
            "type": "string",
            "description": "CA certificate path",
            "default": "server-ca.crt"
        },
        "KeyStore": {
            "type": "string",
            "description": "Certificate path",
            "default": "client.pem"
        },
        "PrivateKey": {
            "type": "string",
            "description": "Private key path",
            "default": "client-privatekey.pem"
        },
        "PrivateKeyPassword": {
            "type": "string",
            "description": "Private key password",
            "default": ""
        },
        "EnabledCipherSuites": {
            "type": "string",
            "description": "Enabled cipher suites",
            "default": ""
        },
        "EnableServerCertAuth": {
            "type": "boolean",
            "description": "Enable client certificate auth",
            "default": true
        },
        "Buffered": {
            "type": "boolean",
            "description": "Controls buffering of published messages in case of disconnection",
            "default": true
        },
        "BufferSize": {
            "type": "integer",
            "description": "Buffer size of published messages in case of disconnection",
            "default": 1024
        },
        "RequiredInterfaces": {
            "type": "array",
            "description": "Array of required interfaces.",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "default": "iqrf::IMessagingService",
                        "description": "..."
                    },
                    "target": {
                        "type": "object"
                    }
                },
                "required": [
                    "name",
                    "target"
                ]
            }
        }
    },
    "required": [
        "component",
        "instance"
    ]
}

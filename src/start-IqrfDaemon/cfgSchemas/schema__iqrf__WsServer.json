{
    "$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
    "self": {
        "vendor": "com.iqrftech.self-desc",
        "name": "schema__iqrf__WsServer",
        "format": "jsonschema",
        "version": "1-0-0"
    },
    "type": "object",
    "required": [
        "component",
        "instance",
        "port",
        "acceptOnlyLocalhost",
        "cert",
        "privKey",
        "tlsMode"
    ],
    "additionalProperties": false,
    "properties": {
        "component": {
            "type": "string",
            "description": "Component name.",
            "enum": [
                "iqrf::WsServer"
            ]
        },
        "instance": {
            "type": "string",
            "description": "Instance name.",
            "default": "iqrf::WsServer-default"
        },
        "port":  {
            "type": "integer",
            "description": "Server port number",
            "default": 1338,
            "minimum": 1024,
            "maximum": 65535
        },
        "acceptOnlyLocalhost": {
            "type": "boolean",
            "description": "Only accept localhost connections"
        },
        "cert": {
            "type": "string",
            "description": "Certificate file"
        },
        "privKey": {
            "type": "string",
            "description": "Private key file"
        },
        "tlsMode": {
            "type": "integer",
            "description": "TLS configuration (0 - modern, 1 - intermediate, 2 - old)",
            "enum": [0, 1, 2]
        }
    }
}

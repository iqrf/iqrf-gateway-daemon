{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQMESH Network - WriteTrConf",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "IQMESH Network management - Write TR configuration response.",
			"const": "iqmeshNetwork_WriteTrConf"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"status"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"rsp": {
					"$id": "#/properties/data/properties/rsp",
					"title": "Response data",
					"description": "Response body object",
					"type": "object",
					"required": [
						"deviceAddr"
					],
					"additionalProperties": false,
					"properties": {
						"deviceAddr": {
							"$ref": "file://definitions.json#/iqmesh/general/deviceAddrAll",
							"description": "Address of device in network. 0 = Coordinator, 1..239 = Node, 255 = all devices."
						},
						"notMatchedNodes": {
							"$id": "#/properties/data/properties/rsp/properties/notMatchedNodes",
							"title": "HWPID mismatched nodes",
							"description": "Nodes that were not affected due to HWPID mismatch.",
							"type": "array",
							"maxItems": 239,
							"additionalItems": false,						
							"items": {"$ref": "file://definitions.json#/embed/node/nAdr"}
						},
						"notRespondedNodes": {
							"$id": "#/properties/data/properties/rsp/properties/notRespondedNodes",
							"title": "Non-responding nodes",
							"description": "Nodes that were not affected due to not being available, offline or another unexpected reason.",
							"type": "array",
							"maxItems": 239,
							"additionalItems": false,
							"items": {"$ref": "file://definitions.json#/embed/node/nAdr"}
						},
						"writeSuccess": {
							"$id": "#/properties/data/properties/rsp/properties/writeSuccess",
							"title": "Write successful",
							"description": "Indicates whether configuration has been successfully written.",
							"type": "boolean"
						},
						"restartNeeded": {
							"$id": "#/properties/data/properties/rsp/properties/restartNeeded",
							"title": "Device restart required",
							"description": "Indicates whether TR configuration changes require the device to be restarted.",
							"type": "boolean"
						}
					}
				},
				"raw": {"$ref": "file://definitions.json#/general/response/raw"},
				"insId": {"$ref": "file://definitions.json#/general/response/insId"},
				"status": {"$ref": "file://definitions.json#/general/response/status"},
				"statusStr": {"$ref": "file://definitions.json#/general/response/statusStr"}
			}
		}
	}
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Write TR configuration response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqmeshNetwork_WriteTrConf" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "deviceAddr"
          ],
          "additionalProperties": false,
          "properties": {
            "deviceAddr": {
              "$ref": "definitions.json#/general/response/hwpId"
            },
            "notMatchedNodes": {
              "description": "Nodes that set bit1 in FrcAcknowledgedBroadcastBits response (their HWPID doesn't match).",
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "notRespondedNodes": {
              "description": "Nodes that didn't respond to FrcAcknowledgedBroadcastBits response.",
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "writeSuccess": {
              "description": "The configuration has been successfully written.",
              "type": "boolean"
            },
            "restartNeeded": {
              "description": "Restart required, but not done yet.",
              "type": "boolean"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Scheduler management - Get task response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "mngScheduler_GetTask" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "clientId",
            "taskId"
          ],
          "additionalProperties": false,
          "properties": {
            "clientId": {
              "$ref": "definitions.json#/scheduler/clientId"
            },
            "taskId": {
              "$ref": "definitions.json#/scheduler/taskId"
            },
            "description": {
              "$ref": "definitions.json#/scheduler/description"
            },
            "task": {
              "oneOf": [
                {
                  "$ref": "definitions.json#/scheduler/task"
                },
                {
                  "title": "List of scheduler tasks",
                  "type": "array",
                  "items": {
                    "$ref": "definitions.json#/scheduler/task"
                  }
                }
              ]
            },
            "timeSpec": {
              "$ref": "definitions.json#/scheduler/timeSpec"
            },
            "persist": {
              "$ref": "definitions.json#/scheduler/persist"
            },
            "enabled": {
              "$ref": "definitions.json#/scheduler/enabled"
            },
            "active": {
              "title": "Scheduled task active",
              "description": "The task is currently scheduled.",
              "type": "boolean"
            }
          }
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        },
        "errorStr": {
          "$ref": "definitions.json#/general/response/errorStr"
        }
      }
    }
  }
}

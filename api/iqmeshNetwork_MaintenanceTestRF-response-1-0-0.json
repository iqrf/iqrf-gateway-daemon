{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Maintenance: Test RF Signal response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqmeshNetwork_MaintenanceTestRF" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nodesNr"
          ],
          "additionalProperties": false,
          "properties": {
            "nodesNr": {
              "$ref": "definitions.json#/iqmesh/nodesNr"
            },
            "inaccessibleNodesNr": {
              "$ref": "definitions.json#/iqmesh/inaccessibleNodesNr"
            },
            "testRfResult": {
              "title": "RF signal test results",
              "description": "Results of test RF signal request.",
              "type": "array",
              "items": {
                "$id": "#/properties/data/properties/rsp/properties/testRfResult/items",
                "title": "RF signal test result",
                "description": "RF signal test result of a single device.",
                "type": "object",
                "required": [
                  "deviceAddr",
                  "online"
                ],
                "additionalProperties": false,
                "properties": {
                  "deviceAddr": {
                    "$ref": "definitions.json#/node/address"
                  },
                  "online": {
                    "title": "Online status",
                    "description": "Device online status at the time of RF signal test.",
                    "type": "boolean"
                  },
                  "counter": {
                    "title": "Signal detection counter",
                    "description": "Number of times signal with specified level/filter or higher is detected during the measurement time.",
                    "type": "integer",
                    "minimum": 0
                  }
                }
              },
              "maxItems": 239
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        }
      }
    }
  }
}

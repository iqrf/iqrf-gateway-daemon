{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Daemon managerment - Mode",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Daemon runtime management - Change the daemon mode request.",
			"const": "mngDaemon_Mode"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"operMode"
					],
					"additionalProperties": false,
					"properties": {
						"operMode": {
							"$id": "#/properties/data/properties/req/properties/operMode",
							"title": "Operation mode",
							"description": "Operation mode",
							"type": "string",
							"enum": [
								"operational",
								"service",
								"forwarding",
								""
							]
						}
					}					
				},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

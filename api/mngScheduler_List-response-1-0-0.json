{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Scheduler management - List tasks response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "mngScheduler_List" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "clientId",
            "tasks"
          ],
          "additionalProperties": false,
          "properties": {
            "clientId": {
              "$ref": "definitions.json#/scheduler/clientId"
            },
            "tasks": {
              "anyOf": [
                {
                  "title": "Scheduler tasks",
                  "description": "List of scheduler task IDs.",
                  "type": "array",
                  "items": {
                    "$ref": "definitions.json#/scheduler/taskId"
                  }
                },
                {
                  "title": "Scheduler tasks",
                  "description": "List of scheduler tasks.",
                  "type": "array",
                  "items": {
                    "title": "Task details",
                    "type": "object",
                    "required": [
                      "clientId",
                      "taskId",
                      "task",
                      "timeSpec",
                      "persist",
                      "enabled"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "clientId": {
                        "$ref": "definitions.json#/scheduler/clientId"
                      },
                      "taskId": {
                        "$ref": "definitions.json#/scheduler/taskId"
                      },
                      "task": {
                        "oneOf": [
                          {
                            "$ref": "definitions.json#/scheduler/task"
                          },
                          {
                            "title": "List of scheduler tasks",
                            "type": "array",
                            "items": {
                              "$ref": "definitions.json#/scheduler/task"
                            }
                          }
                        ]
                      },
                      "timeSpec": {
                        "$ref": "definitions.json#/scheduler/timeSpec"
                      },
                      "persist": {
                        "$ref": "definitions.json#/scheduler/persist"
                      },
                      "enabled": {
                        "$ref": "definitions.json#/scheduler/enabled"
                      },
                      "description": {
                        "$ref": "definitions.json#/scheduler/description"
                      },
                      "active": {
                        "title": "Scheduled task active",
                        "description": "The task is currently scheduled.",
                        "type": "boolean"
                      }
                    }
                  }
                }
              ]
            }
          }
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        },
        "errorStr": {
          "$ref": "definitions.json#/response/errorStr"
        }
      }
    }
  }
}

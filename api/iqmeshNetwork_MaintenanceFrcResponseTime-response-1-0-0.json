{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Maintenance: FRC Response Time response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqmeshNetwork_MaintenanceFrcResponseTime" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "currentResponseTime",
            "inaccessibleNodes",
            "unhandledNodes",
            "nodes",
            "recommendedResponseTime"
          ],
          "additionalProperties": false,
          "properties": {
            "inaccessibleNodes": {
              "$ref": "definitions.json#/iqmesh/inaccessibleNodesNr"
            },
            "unhandledNodes": {
              "title": "Unhandled nodes",
              "description": "Number of nodes that did not handle the FRC response time event.",
              "type": "integer",
              "minimum": 0,
              "maximum": 239
            },
            "nodes": {
              "title": "Nodes",
              "description": "FRC response time node devices results.",
              "type": "array",
              "items": {
                "title": "Node result",
                "description": "Object containing FRC response time results for a single node.",
                "type": "object",
                "required": [
                  "deviceAddr",
                  "responded"
                ],
                "additionalProperties": false,
                "properties": {
                  "deviceAddr": {
                    "$ref": "definitions.json#/general/nAdr"
                  },
                  "responded": {
                    "title": "Node responded",
                    "description": "Indicates whether node device responded to the FRC request.",
                    "type": "boolean"
                  },
                  "handled": {
                    "title": "Event handled",
                    "description": "Indicates whether node device handled FRC response time event.",
                    "type": "boolean"
                  },
                  "responseTime": {
                    "title": "Response time",
                    "description": "Node device response time.",
                    "type": "integer",
                    "enum": [
                      40,
                      360,
                      680,
                      1320,
                      2600,
                      5160,
                      10280,
                      20620
                    ]
                  }
                }
              },
              "maxItems": 239
            },
            "currentResponseTime": {
              "title": "Current response time",
              "description": "FRC response time currently set at [C].",
              "type": "integer",
              "enum": [
                40,
                360,
                680,
                1320,
                2600,
                5160,
                10280,
                20620
              ]
            },
            "recommendedResponseTime": {
              "title": "Recommended response time",
              "description": "FRC response time that is recommended to set at [C].",
              "type": "integer",
              "enum": [
                40,
                360,
                680,
                1320,
                2600,
                5160,
                10280,
                20620
              ]
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        }
      }
    }
  }
}

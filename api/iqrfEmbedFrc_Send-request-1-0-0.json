{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Embed FRC - Send",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Embedded peripheral FRC - Send request.",
			"const": "iqrfEmbedFrc_Send"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/embed/coordinator/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"frcCommand",
								"userData"
							],
							"additionalProperties": false,
							"properties": {
								"frcCommand": {"$ref": "file://definitions.json#/embed/frc/frcCommand"},
								"userData": {
									"$id": "#/properties/data/properties/req/properties/param/properties/userData",
									"title": "User data",
									"description": "User data that are available at IQRF OS array variable DataOutBeforeResponseFRC at FRC Value event.",
									"type": "array",
									"minItems": 2,
									"maxItems": 30,
									"additionalItems": false,
									"items": {"$ref": "file://definitions.json#/embed/frc/userByte"}
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

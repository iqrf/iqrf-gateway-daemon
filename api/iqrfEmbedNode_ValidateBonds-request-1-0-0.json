{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral Node - ValidateBonds request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfEmbedNode_ValidateBonds" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Contains request specific parameters.",
          "type": "object",
          "required": [
            "nAdr",
            "param"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "hwpId": {
              "$ref": "definitions.json#/request/hwpId"
            },
            "param": {
              "title": "Request parameters",
              "description": "Specific request parameters.",
              "type": "object",
              "required": [
                "nodes"
              ],
              "additionalProperties": false,
              "properties": {
                "nodes": {
                  "title": "Node bonding information",
                  "description": "Array of network [N] address and [N] MID pairs.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "address",
                      "mid"
                    ],
                    "properties": {
                      "address": {
                        "description": "Address of the node to validate.",
                        "$ref": "definitions.json#/node/address"
                      },
                      "mid": {
                        "description": "MID to check against.",
                        "$ref": "definitions.json#/transceiver/id"
                      }
                    }
                  },
                  "minItems": 1,
                  "maxItems": 11
                }
              }
            }
          }
        },
        "timeout": {
          "$ref": "definitions.json#/dpa/timeout"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Embed Node - ValidateBonds",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Embedded peripheral Node - Validate bonds request.",
			"const": "iqrfEmbedNode_ValidateBonds"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/embed/node/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"nodes"
							],
							"additionalProperties": false,
							"properties": {
								"nodes": {
									"$id": "#/properties/data/properties/req/properties/param/nodes",
									"title": "Address/MID pairs.",
									"description": "Array of address and MID pairs.",
									"type": "array",
									"minItems": 1,
									"maxItems": 11,
									"additionalItems": false,
									"items": {
										"$id": "#/properties/data/properties/req/properties/param/nodes/items",
										"title": "Address/MID pair.",
										"description": "Address and MID pair used to validate node bond against MID.",
										"type": "object",
										"required": [
											"bondAddr",
											"mid"
										],
										"additionalProperties": false,
										"properties": {
											"bondAddr": {
												"$ref": "file://definitions.json#/embed/coordinator/reqAddr",
												"description": "Address of the node to validate."
											},
											"mid": {
												"$ref": "file://definitions.json#/embed/os/mid",
												"description": "MID to check against."
											}
										}
									}
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

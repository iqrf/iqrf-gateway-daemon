{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Embed OS - SetSecurity",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Embedded peripheral OS - Set Security request.",
			"const": "iqrfEmbedOs_SetSecurity"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/general/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"type",
								"data"
							],
							"additionalProperties": false,
							"properties": {
								"type": {
									"$id": "#/properties/data/properties/req/properties/param/properties/type",
									"title": "Security type",
									"description": "Sets access password or user key stored at data. 0 = access password, 1 = user key.",
									"type": "integer",
									"enum": [0, 1]
								},
								"data": {
									"$id": "#/properties/data/properties/req/properties/param/properties/data",
									"title": "Security string.",
									"description": "Access password or user key.",
									"type": "array",
									"minItems": 16,
									"maxItems": 16,
									"additionalItems": false,
									"items": {
										"$id": "#/properties/data/properties/req/properties/param/properties/data/items",
										"title": "Password/key character",
										"description": "Single character of access password or user key. Integer value representing an ascii character.",
										"type": "integer",
										"minimum": 0,
										"maximum": 255
									}
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

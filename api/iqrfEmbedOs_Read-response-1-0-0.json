{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral OS - Read response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfEmbedOs_Read" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "pNum": {
              "$ref": "definitions.json#/peripheral/number"
            },
            "pCmd": {
              "$ref": "definitions.json#/peripheral/command"
            },
            "hwpId": {
              "$ref": "definitions.json#/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "mid",
                "osVersion",
                "trType",
                "osBuild",
                "rssi",
                "supplyVoltage",
                "flags",
                "slotLimits",
                "ibk",
                "dpaVer",
                "userPerNr",
                "embeddedPers",
                "hwpid",
                "hwpidVer",
                "flagsEnum",
                "userPer"
              ],
              "additionalProperties": false,
              "properties": {
                "mid": {
                  "$ref": "definitions.json#/transciever/id"
                },
                "osVersion": {
                  "title": "OS version",
                  "description": "Hexadecimal number identifying IQRF OS version.",
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 255
                },
                "trType": {
                  "$ref": "definitions.json#/transciever/type"
                },
                "osBuild": {
                  "title": "IQRF OS build.",
                  "description": "A number identifying a subversion of IQRF OS.",
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 65535
                },
                "rssi": {
                  "$ref": "definitions.json#/node/rssi"
                },
                "supplyVoltage": {
                  "title": "Supply voltage",
                  "description": "Module supply voltage, contains real voltage value.",
                  "type": "number",
                  "minimum": 0,
                  "maximum": 255
                },
                "flags": {
                  "$ref": "definitions.json#/os/flags"
                },
                "slotLimits": {
                  "$ref": "definitions.json#/node/timeslotLimits"
                },
                "ibk": {
                  "$ref": "definitions.json#/node/ibk"
                },
                "dpaVer": {
                  "$ref": "definitions.json#/dpa/version"
                },
                "userPerNr": {
                  "$ref": "definitions.json#/peripheral/userCnt"
                },
                "embeddedPers": {
                  "$ref": "definitions.json#/peripheral/embedded"
                },
                "hwpid": {
                  "$ref": "definitions.json#/response/hwpId"
                },
                "hwpidVer": {
                  "$ref": "definitions.json#/device/hwpIdVersion"
                },
                "flagsEnum": {
                  "$ref": "definitions.json#/enumeration/flags"
                },
                "userPer": {
                  "$ref": "definitions.json#/peripheral/user"
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/dpa/timeout"
        }
      }
    }
  }
}

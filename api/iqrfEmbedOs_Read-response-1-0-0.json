{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral OS - Read response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfEmbedOs_Read" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/general/nAdr"
            },
            "pNum": {
              "$ref": "definitions.json#/general/response/pNum"
            },
            "pCmd": {
              "$ref": "definitions.json#/general/response/pCmd"
            },
            "hwpId": {
              "$ref": "definitions.json#/general/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/general/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/general/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "mid",
                "osVersion",
                "trType",
                "osBuild",
                "rssi",
                "supplyVoltage",
                "flags",
                "slotLimits",
                "ibk",
                "dpaVer",
                "perNr",
                "embeddedPers",
                "hwpid",
                "hwpidVer",
                "flagsEnum",
                "userPer"
              ],
              "additionalProperties": false,
              "properties": {
                "mid": {
                  "type": "number",
                  "description": "TR Module ID.",
                  "minimum": 0,
                  "maximum": 4294967295
                },
                "osVersion": {
                  "type": "integer",
                  "description": "IQRF OS version.",
                  "minimum": 0,
                  "maximum": 255
                },
                "trType": {
                  "type": "integer",
                  "description": "TR MCU type.",
                  "minimum": 0,
                  "maximum": 255
                },
                "osBuild": {
                  "type": "integer",
                  "description": "IQRF OS build.",
                  "minimum": 0,
                  "maximum": 65535
                },
                "rssi": {
                  "type": "integer",
                  "description": "See lastRSSI at IQRF OS Reference Guide.",
                  "minimum": 0,
                  "maximum": 255
                },
                "supplyVoltage": {
                  "type": "number",
                  "description": "Module supply voltage, contains real voltage value.",
                  "minimum": 0,
                  "maximum": 255
                },
                "flags": {
                  "type": "integer",
                  "description": "See DPA guide.",
                  "minimum": 0,
                  "maximum": 255
                },
                "slotLimits": {
                  "type": "integer",
                  "description": "See DPA guide.",
                  "minimum": 0,
                  "maximum": 255
                },
                "ibk": {
                  "type": "array",
                  "description": "Individual Bonding Key.",
                  "items": {
                    "type": "integer",
                    "default": 0,
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 16,
                  "maxItems": 16
                },
                "dpaVer": {
                  "type": "integer",
                  "description": "DPA version.",
                  "minimum": 0,
                  "maximum": 65535
                },
                "userPerNr": {
                  "type": "integer",
                  "description": "Number of all non-embedded peripherals implemented by Custom DPA Handler.",
                  "minimum": 0,
                  "maximum": 255
                },
                "embeddedPers": {
                  "type": "array",
                  "description": "Array of embedded peripherals (their ordinal numbers), which are enabled in the TR configuration.",
                  "items": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 32
                  }
                },
                "hwpid": {
                  "$ref": "definitions.json#/general/response/hwpId"
                },
                "hwpidVer": {
                  "type": "integer",
                  "description": "Hardware profile version.",
                  "minimum": 0,
                  "maximum": 65535
                },
                "flagsEnum": {
                  "type": "integer",
                  "description": "Various flags: bit 0 - Device works in STD-RX mode, bit 1 - Device works in LP-RX mode, bit 2 - STD+LP network is running, otherwise STD network.",
                  "minimum": 0,
                  "maximum": 255
                },
                "userPer": {
                  "type": "array",
                  "description": "Array of implemented non-embedded peripherals (their ordinal numbers).",
                  "items": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "maxItems": 12
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/general/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        }
      }
    }
  }
}

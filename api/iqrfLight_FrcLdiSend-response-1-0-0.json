{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Interoperability Standard Light - FRC Send LDI response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfLight_FrcLdiSend" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "pNum": {
              "$ref": "definitions.json#/peripheral/number"
            },
            "pCmd": {
              "$ref": "definitions.json#/peripheral/command"
            },
            "hwpId": {
              "$ref": "definitions.json#/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "command",
                "answers"
              ],
              "additionalProperties": false,
              "properties": {
                "command": {
                  "$ref": "definitions.json#/interoperability/light/ldiCommand"
                },
                "answers": {
                  "type": "array",
                  "description": "Array of objects for every LDI (DALI) answer. Object array index represent the node address (or index in case selectedNodes parameter was used).",
                  "items": {
                    "oneOf": [
                      { "type": "null" },
                      {
                        "$ref": "#/$localDefinitions/answer"
                      },
                      {
                        "type": "object",
                        "title": "Extended format",
                        "required": [
                          "nAdr",
                          "answer"
                        ],
                        "additionalProperties": false,
                        "properties": {
                          "nAdr": {
                            "$ref": "definitions.json#/node/address"
                          },
                          "hwpid": {
                            "$ref": "definitions.json#/response/hwpId"
                          },
                          "mid": {
                            "oneOf": [
                              { "type": "null" },
                              {
                                "$ref": "definitions.json#/transciever/id"
                              }
                            ]
                          },
                          "metaData": {
                            "$ref": "definitions.json#/frc/metadata"
                          },
                          "answer": {
                            "oneOf": [
                              { "type": "null" },
                              {
                                "$ref": "#/$localDefinitions/answer"
                              }
                            ]
                          }
                        }
                      }
                    ]
                  }
                },
                "selectedNodes": {
                  "$ref": "definitions.json#/frc/selectedNodes"
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/dpa/timeout"
        }
      }
    }
  },
  "$localDefinitions": {
    "answer": {
      "type": "object",
      "title": "Regular format of LDI answer",
      "required": [
        "status",
        "value"
      ],
      "additionalProperties": false,
      "properties": {
        "status": {
          "$ref": "definitions.json#/interoperability/light/status"
        },
        "value": {
          "$ref": "definitions.json#/interoperability/light/value"
        }
      }
    }
  }
}

{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Embed Coordinator - DiscoveryData",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Embedded peripheral Coordinator - Discovery Data request.",
			"const": "iqrfEmbedCoordinator_DiscoveryData"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/embed/coordinator/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"address"
							],
							"additionalProperties": false,
							"properties": {
								"address": {
									"$id": "#/properties/data/properties/req/properties/param/address",
									"title": "Address",
									"description": "Address of the discovery data to read. See Coordinator Bonding and Discovery Data section of the IQRF OS user guide.",
									"type": "integer",
									"minimum": 0,
									"maximum": 65535
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQRF DB - GetSensors response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfDb_GetSensors" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "devices"
          ],
          "additionalProperties": false,
          "properties": {
            "devices": {
              "title": "Devices containing sensors",
              "type": "array",
              "items": {
                "title": "Device containing sensors",
                "type": "object",
                "required": [
                  "address",
                  "sensors"
                ],
                "additionalProperties": false,
                "properties": {
                  "address": {
                    "title": "Device address",
                    "$ref": "definitions.json#/node/address"
                  },
                  "sensors": {
                    "title": "Device sensors",
                    "type": "array",
                    "items": {
                      "title": "Device sensor",
                      "type": "object",
                      "required": [
                        "index",
                        "type",
                        "name",
                        "shortname",
                        "unit",
                        "decimalPlaces",
                        "frc2Bit",
                        "frc1Byte",
                        "frc2Byte",
                        "frc4Byte",
                        "value",
                        "updated",
                        "metadata"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "index": {
                          "allOf": [
                            {
                              "$ref": "definitions.json#/interoperability/sensor/index"
                            },
                            {
                              "minimum": 0,
                              "maximum": 31
                            }
                          ]
                        },
                        "type": {
                          "$ref": "definitions.json#/interoperability/sensor/type"
                        },
                        "name": {
                          "$ref": "definitions.json#/interoperability/sensor/name"
                        },
                        "shortname": {
                          "$ref": "definitions.json#/interoperability/sensor/shortName"
                        },
                        "unit": {
                          "$ref": "definitions.json#/interoperability/sensor/unit"
                        },
                        "decimalPlaces": {
                          "$ref": "definitions.json#/interoperability/sensor/decimalPlaces"
                        },
                        "frc2Bit": {
                          "title": "2-bit FRC implemented",
                          "type": "boolean"
                        },
                        "frc1Byte": {
                          "title": "1-byte FRC implemented",
                          "type": "boolean"
                        },
                        "frc2Byte": {
                          "title": "2-byte FRC implemented",
                          "type": "boolean"
                        },
                        "frc4Byte": {
                          "title": "4-byte FRC implemented",
                          "type": "boolean"
                        },
                        "value": {
                          "$ref": "definitions.json#/interoperability/sensor/value"
                        },
                        "updated": {
                          "oneOf": [
                            {
                              "title": "Timestamp",
                              "description": "Timestamp of the last measurement",
                              "type": "string"
                            },
                            { "type": "null" }
                          ]
                        },
                        "metadata": {
                          "$ref": "definitions.json#/frc/metadata"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        }
      }
    }
  }
}

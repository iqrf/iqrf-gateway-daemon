{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Backup request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_Backup" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "oneOf": [
            {
              "title": "Backup a device",
              "description": "Specific parameters for the backup of a single device.",
              "type": "object",
              "required": [
                "deviceAddr"
              ],
              "additionalProperties": false,
              "properties": {
                "deviceAddr": {
                  "description": "Address of device to backup (0 - [C] device, 1..239 - [N] device)",
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 239,
                  "default": 0
                }
              }
            },
            {
              "title": "Backup the network",
              "description": "Specific parameters for backing up the whole network.",
              "type": "object",
              "required": [
                "wholeNetwork"
              ],
              "additionalProperties": false,
              "properties": {
                "wholeNetwork": {
                  "description": "Backup the whole Network ",
                  "type": "boolean",
                  "const": true
                }
              }
            }
          ]
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Backup request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_Backup" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "deviceAddr"
          ],
          "additionalProperties": false,
          "properties": {
            "deviceAddr": {
              "description": "Address of device to backup (0 - [C] device, 1..239 - [N] device)",
              "type": "integer",
              "minimum": 0,
              "maximum": 239,
              "default": 0
            },
            "wholeNetwork": {
              "description": "Backup the whole Network ",
              "type": "boolean",
              "default": false
            }
          }
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

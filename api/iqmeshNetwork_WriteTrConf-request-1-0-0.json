{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Write TR configuration request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_WriteTrConf" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Contains request specific parameters.",
          "type": "object",
          "required": [
            "deviceAddr"
          ],
          "additionalProperties": false,
          "properties": {
            "deviceAddr": {
              "$ref": "definitions.json#/node/address",
              "description": "Device address to write the configuration to. Broadcast address is also allowed."
            },
            "hwpId": {
              "$ref": "definitions.json#/request/hwpId"
            },
            "embPers": {
              "$ref": "definitions.json#/peripheral/embeddedParsed"
            },
            "rfChannelA": {
              "$ref": "definitions.json#/transceiver/radio/channelA"
            },
            "rfChannelB": {
              "$ref": "definitions.json#/transceiver/radio/channelB"
            },
            "rfSubChannelA": {
              "$ref": "definitions.json#/transceiver/radio/subChannelA"
            },
            "rfSubChannelB": {
              "$ref": "definitions.json#/transceiver/radio/subChannelB"
            },
            "txPower": {
              "$ref": "definitions.json#/transceiver/radio/txPower"
            },
            "rxFilter": {
              "$ref": "definitions.json#/transceiver/radio/rxFilter"
            },
            "lpRxTimeout": {
              "$ref": "definitions.json#/transceiver/radio/lpRxTimeout"
            },
            "rfAltDsmChannel": {
              "$ref": "definitions.json#/transceiver/radio/altDsmChannel"
            },
            "localFrcReception": {
              "$ref": "definitions.json#/frc/localReception"
            },
            "rfPgmEnableAfterReset": {
              "$ref": "definitions.json#/transceiver/rfpgm/enableAfterReset"
            },
            "rfPgmTerminateAfter1Min": {
              "$ref": "definitions.json#/transceiver/rfpgm/terminateAfter1Min"
            },
            "rfPgmTerminateMcuPin": {
              "$ref": "definitions.json#/transceiver/rfpgm/terminateMcuPin"
            },
            "rfPgmDualChannel": {
              "$ref": "definitions.json#/transceiver/rfpgm/dualChannel"
            },
            "rfPgmLpMode": {
              "$ref": "definitions.json#/transceiver/rfpgm/lpMode"
            },
            "rfPgmIncorrectUpload": {
              "$ref": "definitions.json#/transceiver/rfpgm/incorrectUpload"
            },
            "customDpaHandler": {
              "$ref": "definitions.json#/dpa/customHandler"
            },
            "dpaPeerToPeer": {
              "$ref": "definitions.json#/dpa/peerToPeer"
            },
            "nodeDpaInterface": {
              "$ref": "definitions.json#/dpa/interface"
            },
            "uartBaudrate": {
              "$ref": "definitions.json#/transceiver/config/uartBaudrate"
            },
            "dpaAutoexec": {
              "$ref": "definitions.json#/transceiver/config/dpaAutoexec"
            },
            "routingOff": {
              "$ref": "definitions.json#/node/routingOff"
            },
            "ioSetup": {
              "$ref": "definitions.json#/transceiver/config/ioSetup"
            },
            "peerToPeer": {
              "$ref": "definitions.json#/node/peerToPeer"
            },
            "neverSleep": {
              "$ref": "definitions.json#/transceiver/config/neverSleep"
            },
            "stdAndLpNetwork": {
              "$ref": "definitions.json#/node/stdAndLpNetwork"
            },
            "accessPassword": {
              "type": "string",
              "description": "It sets access password. If the field is left completely empty (no characters filled), the default password (16x number 0x00) is used (the same as the default set from the factory).",
              "maxItems": 16
            },
            "securityUserKey": {
              "type": "string",
              "description": "It sets security user key. Enter a value up to 16 characters.",
              "maxItems": 16
            }
          }
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

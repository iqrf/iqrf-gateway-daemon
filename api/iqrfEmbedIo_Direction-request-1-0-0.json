{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral IO - Direction request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfEmbedIo_Direction" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "nAdr",
            "param"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "hwpId": {
              "$ref": "definitions.json#/device/hwpId_request"
            },
            "param": {
              "title": "Request parameters",
              "description": "Specific request parameters.",
              "type": "object",
              "required": [
                "subcommands"
              ],
              "additionalProperties": false,
              "properties": {
                "subcommands": {
                  "type": "array",
                  "description": "Array of subcommands.",
                  "items": {
                    "type": "object",
                    "required": [
                      "port",
                      "mask",
                      "value"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "port": {
                        "type": "integer",
                        "description": " Specifies port to setup a direction or pull-up."
                      },
                      "mask": {
                        "type": "integer",
                        "description": "Masks pins of the port."
                      },
                      "value": {
                        "type": "integer",
                        "description": "Actual direction bits or pull-up state."
                      }
                    }
                  },
                  "minItems": 1
                }
              }
            }
          }
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/general/returnVerbose"
        }
      }
    }
  }
}

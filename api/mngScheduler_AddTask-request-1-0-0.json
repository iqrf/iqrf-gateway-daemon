{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Scheduler management - Add task request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "mngScheduler_AddTask" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "clientId",
            "task",
            "timeSpec"
          ],
          "additionalProperties": false,
          "properties": {
            "clientId": {
              "$ref": "definitions.json#/scheduler/clientId"
            },
            "task": {
              "oneOf": [
                {
                  "$ref": "definitions.json#/scheduler/task"
                },
                {
                  "title": "List of scheduler tasks",
                  "type": "array",
                  "items": {
                    "$ref": "definitions.json#/scheduler/task"
                  }
                }
              ]
            },
            "timeSpec": {
              "$ref": "definitions.json#/scheduler/timeSpec"
            },
            "description": {
              "$ref": "definitions.json#/scheduler/description"
            },
            "enabled": {
              "$ref": "definitions.json#/scheduler/enabled"
            },
            "persist": {
              "$ref": "definitions.json#/scheduler/persist"
            },
            "taskId": {
              "$ref": "definitions.json#/scheduler/taskId"
            }
          }
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral OS - LoadCode request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfEmbedOs_LoadCode" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "nAdr",
            "param"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "hwpId": {
              "$ref": "definitions.json#/request/hwpId"
            },
            "param": {
              "title": "Request parameters",
              "description": "Specific request parameters.",
              "type": "object",
              "required": [
                "flags",
                "address",
                "length",
                "checkSum"
              ],
              "additionalProperties": false,
              "properties": {
                "flags": {
                  "type": "integer",
                  "description": "Flags: Bit 0 denotes Action, bits 1-2 Code Type.",
                  "minimum": 0,
                  "maximum": 255
                },
                "address": {
                  "type": "integer",
                  "description": "A physical address at external EEPROM memory to load the code image from.",
                  "minimum": 0,
                  "maximum": 65535
                },
                "length": {
                  "type": "integer",
                  "description": "Length of the code image in bytes at the external EEPROM.",
                  "minimum": 0,
                  "maximum": 65535
                },
                "checkSum": {
                  "type": "integer",
                  "description": "Oneâ€™s complement Fletcher-16 checksum of the code image.",
                  "minimum": 0,
                  "maximum": 65535
                }
              }
            }
          }
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/general/returnVerbose"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Backup response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqmeshNetwork_Backup" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "devices",
            "progress"
          ],
          "additionalProperties": false,
          "properties": {
            "progress": {
              "$ref": "definitions.json#/iqmesh/progress"
            },
            "devices": {
              "description": "Device(s) backup data.",
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "deviceAddr",
                  "online"
                ],
                "additionalProperties": false,
                "properties": {
                  "deviceAddr": {
                    "$ref": "definitions.json#/general/nAdr"
                  },
                  "online": {
                    "description": "Device online status.",
                    "type": "boolean"
                  },
                  "mid": {
                    "$ref": "definitions.json#/device/mId"
                  },
                  "dpaVer": {
                    "$ref": "definitions.json#/explore/dpaVer"
                  },
                  "data": {
                    "description": "Device Backup Data (hex-string format).",
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        }
      }
    }
  }
}

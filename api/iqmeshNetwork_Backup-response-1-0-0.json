{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQMESH Network - Backup",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "IQMESH Network management - Backup response.",
			"const": "iqmeshNetwork_Backup"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"rsp",
				"status"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"rsp": {
					"$id": "#/properties/data/properties/rsp",
					"title": "Response data",
					"description": "Response body object",
					"type": "object",
					"required": [
						"progress",
						"devices"
					],
					"properties": {
						"progress": {
							"$id": "#/properties/data/properties/rsp/properties/progress",
							"title": "Backup progress",
							"description": "Backup algorithm progress in percentages.",
							"type": "integer",
							"minimum": 0,
							"maximum": 100
						},
						"devices": {
							"$id": "#/properties/data/properties/rsp/properties/devices",
							"title": "Device(s) backup data.",
							"type": "array",
							"description": "Array of device backup data objects.",
							"minItems": 1,
							"maxItems": 240,
							"items": {
								"$id": "#/properties/data/properties/rsp/properties/devices/items",
								"title": "Device backup data.",
								"description": "Backup data of a single device.",
								"type": "object",
								"required": [
									"deviceAddr",
									"online"
								],
								"properties": {
									"deviceAddr": {"$ref": "file://definitions.json#/iqmesh/general/deviceAddr"},
									"online": {
										"$id": "#/properties/data/properties/rsp/properties/devices/items/properties/online",
										"title": "Device status",
										"description": "Indicates whether device is online,",
										"type": "boolean"
									},
									"mid": {"$ref": "file://definitions.json#/embed/os/mid"},
									"dpaVer": {"$ref": "file://definitions.json#/embed/os/dpaVer"},
									"data": {
										"$id": "#/properties/data/properties/rsp/properties/devices/items/properties/data",
										"title": "Backup data",
										"description": "Device Backup Data (hex-string format).",
										"type": "string",
										"pattern": "^[0-9a-fA-F]+$"
									}
								}
							}
						}
					}
				},
				"raw": {"$ref": "file://definitions.json#/general/response/raw"},
				"insId": {"$ref": "file://definitions.json#/general/response/insId"},
				"status": {"$ref": "file://definitions.json#/general/response/status"},
				"statusStr": {"$ref": "file://definitions.json#/general/response/statusStr"}
			}
		}
	}
}

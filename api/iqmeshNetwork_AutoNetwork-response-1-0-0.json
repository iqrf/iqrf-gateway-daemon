{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - AutoNetwork response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_AutoNetwork" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "wave"
          ],
          "additionalProperties": false,
          "properties": {
            "wave": {
              "description": "Wave number.",
              "type": "integer",
              "minimum": 0
            },
            "lastWave": {
              "description": "Indication, if this is the last wave.",
              "type": "boolean"
            },
            "newNodes": {
              "description": "Returns nodes newly added into the network in this wave.",
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "address",
                  "mid"
                ],
                "additionalProperties": false,
                "properties": {
                  "address": {
                    "$ref": "definitions.json#/node/address"
                  },
                  "mid": {
                    "$ref": "definitions.json#/transceiver/idStr"
                  }
                }
              }
            },
            "newNodesNr": {
              "description": "Number of nodes newly added into the network in this wave.",
              "type": "integer",
              "minimum": 0,
              "maximum": 239
            },
            "nodesNr": {
              "description": "Number of nodes in the network.",
              "type": "integer",
              "minimum": 0,
              "maximum": 255
            },
            "progress": {
              "$ref": "definitions.json#/iqmesh/progress"
            },
            "waveState": {
              "description": "Wave state description notification.",
              "type": "string"
            },
            "waveStateCode": {
              "description": "Wave state description notification code.",
              "type": "integer"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        }
      }
    }
  }
}

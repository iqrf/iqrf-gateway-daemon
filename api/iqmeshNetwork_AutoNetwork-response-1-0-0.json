{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQMESH Network - AutoNetwork",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "IQMESH Network management - AutoNetwork response.",
			"const": "iqmeshNetwork_AutoNetwork"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"status"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"rsp": {
					"$id": "#/properties/data/properties/rsp",
					"title": "Response data",
					"description": "Response body object",
					"type": "object",
					"required": [
						"wave"
					],
					"additionalProperties": false,
					"properties": {
						"wave": {
							"$id": "#/properties/data/properties/rsp/properties/wave",
							"title": "Wave number",
							"description": "Current AutoNetwork wave number.",
							"type": "integer",
							"minimum": 1
						},
						"waveState": {
							"$id": "#/properties/data/properties/rsp/properties/waveState",
							"title": "Wave state string",
							"description": "Wave status string description.",
							"type": "string"
						},
						"waveStateCode": {
							"$id": "#/properties/data/properties/rsp/properties/waveStateCode",
							"title": "Wave state code",
							"description": "Wave status integer code.",
							"type": "integer",
							"minimum": 0,
							"maximum": 20
						},
						"progress": {"$ref": "file://definitions.json#/iqmesh/general/progress"},
						"nodesNr": {"$ref": "file://definitions.json#/embed/coordinator/devNr"},
						"newNodesNr": {
							"$id": "#/properties/data/properties/rsp/properties/newNodesNr",
							"title": "Number of new nodes",
							"description": "Number of nodes newly added into the network in this wave.",
							"type": "integer",
							"minimum": 0,
							"maximum": 239
						},
						"newNodes": {
							"$id": "#/properties/data/properties/rsp/properties/newNodes",
							"title": "Newly added nodes",
							"description": "Array of new nodes (MID, address) in the network.",
							"type": "array",
							"minItems": 1,
							"maxItems": 239,
							"additionalItems": false,
							"items": {
								"$id": "#/properties/data/properties/rsp/properties/newNodes/items",
								"title": "New node",
								"description": "MID and address of a newly added node.",
								"type": "object",
								"required": [
									"mid",
									"address"
								],
								"additionalProperties": false,
								"properties": {
									"mid": {"$ref": "file://definitions.json#/iqmesh/device/os/mid"},
									"address": {"$ref": "file://definitions.json#/embed/node/nAdr"}
								}
							}
						},
						"lastWave": {
							"$id": "#/properties/data/properties/rsp/properties/lastWave",
							"title": "Last wave",
							"description": "Indicates whether the current wave is the last wave.",
							"type": "boolean"
						}
					}
				},
				"raw": {"$ref": "file://definitions.json#/general/response/raw"},
				"insId": {"$ref": "file://definitions.json#/general/response/insId"},
				"status": {"$ref": "file://definitions.json#/general/response/status"},
				"statusStr": {"$ref": "file://definitions.json#/general/response/statusStr"}
			}
		}
	}
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Interoperability Standard Sensor - Read Sensors with Types response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfSensor_ReadSensorsWithTypes" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/general/nAdr"
            },
            "pNum": {
              "$ref": "definitions.json#/general/response/pNum"
            },
            "pCmd": {
              "$ref": "definitions.json#/general/response/pCmd"
            },
            "hwpId": {
              "$ref": "definitions.json#/general/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/general/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/general/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "sensors"
              ],
              "additionalProperties": false,
              "properties": {
                "sensors": {
                  "title": "Sensors",
                  "description": "Array of sensor objects.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "id",
                      "type",
                      "name",
                      "shortName",
                      "unit",
                      "decimalPlaces"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "Value type as text id."
                      },
                      "type": {
                        "type": "integer",
                        "description": "Value type of the sensor (quantity)."
                      },
                      "name": {
                        "type": "string",
                        "description": "Name of the sensor (quantity)."
                      },
                      "shortName": {
                        "type": "string",
                        "description": " Short name of the sensor (quantity). Typically it is a symbol used at physics."
                      },
                      "value": {
                        "description": "Value of the sensor.",
                        "oneOf": [
                          {
                            "type": "null"
                          },
                          {
                            "type": "number"
                          },
                          {
                            "type": "array",
                            "items": {
                              "type": "integer"
                            }
                          }
                        ]
                      },
                      "unit": {
                        "type": "string",
                        "description": "Unit of the quantity. Dimensionless quantities has \"\"."
                      },
                      "decimalPlaces": {
                        "type": "number",
                        "description": "Number of valid decimal places."
                      },
                      "breakdown": {
                        "type": "array",
                        "description": "Parsed generic types if present in device response.",
                        "items": {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "integer",
                              "description": "Value type of the sensor (quantity)."
                            },
                            "name": {
                              "type": "string",
                              "description": "Name of the sensor (quantity)."
                            },
                            "shortName": {
                              "type": "string",
                              "description": " Short name of the sensor (quantity). Typically it is a symbol used at physics."
                            },
                            "value": {
                              "description": "Value of the sensor.",
                              "oneOf": [
                                {
                                  "type": "number"
                                },
                                {
                                  "type": "null"
                                },
                                {
                                  "type": "array",
                                  "items": {
                                    "type": "integer"
                                  }
                                }
                              ]
                            },
                            "unit": {
                              "type": "string",
                              "description": "Unit of the quantity. Dimensionless quantities has \"\"."
                            },
                            "decimalPlaces": {
                              "type": "number",
                              "description": "Number of valid decimal places."
                            }
                          }
                        }
                      }
                    },
                    "maxItems": 31
                  }
                },
                "sensorIndexes": {
                  "description": "Indexes of requested sensors.",
                  "additionalItems": false,
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "type": "integer"
                    },
                    {
                      "type": "array",
                      "additionalItems": false,
                      "uniqueItems": true,
                      "items": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 31
                      }
                    }
                  ]
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/general/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Interoperability Standard Sensor - Read Sensors with Types response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfSensor_ReadSensorsWithTypes" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "pNum": {
              "$ref": "definitions.json#/peripheral/number"
            },
            "pCmd": {
              "$ref": "definitions.json#/peripheral/command"
            },
            "hwpId": {
              "$ref": "definitions.json#/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "sensors"
              ],
              "additionalProperties": false,
              "properties": {
                "sensors": {
                  "title": "Sensors",
                  "description": "List of sensors.",
                  "type": "array",
                  "items": {
                    "title": "Sensor",
                    "type": "object",
                    "required": [
                      "id",
                      "type",
                      "name",
                      "shortName",
                      "unit",
                      "decimalPlaces"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "$ref": "definitions.json#/interoperability/sensor/id"
                      },
                      "type": {
                        "$ref": "definitions.json#/interoperability/sensor/type"
                      },
                      "name": {
                        "$ref": "definitions.json#/interoperability/sensor/name"
                      },
                      "shortName": {
                        "$ref": "definitions.json#/interoperability/sensor/shortName"
                      },
                      "value": {
                        "$ref": "definitions.json#/interoperability/sensor/value"
                      },
                      "unit": {
                        "$ref": "definitions.json#/interoperability/sensor/unit"
                      },
                      "decimalPlaces": {
                        "$ref": "definitions.json#/interoperability/sensor/decimalPlaces"
                      },
                      "breakdown": {
                        "$ref": "definitions.json#/interoperability/sensor/genericReadout"
                      }
                    },
                    "maxItems": 31
                  }
                },
                "sensorIndexes": {
                  "$ref": "definitions.json#/interoperability/sensor/indexes"
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/dpa/timeout"
        }
      }
    }
  }
}

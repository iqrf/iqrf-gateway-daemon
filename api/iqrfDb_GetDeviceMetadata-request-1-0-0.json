{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQRF DB - GetDeviceMetadata request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfDb_GetDeviceMetadata" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "devices"
          ],
          "additionalProperties": false,
          "properties": {
            "devices": {
              "title": "Devices",
              "description": "Array of addresses of devices for which to retrieve the metadata.",
              "type": "array",
              "items": {
                "title": "Device address",
                "description": "Address of device in network.",
                "$ref": "definitions.json#/node/address"
              },
              "maxItems": 240
            }
          }
        },
        "returnVerbose": {
          "$ref": "definitions.json#/general/returnVerbose"
        }
      }
    }
  }
}

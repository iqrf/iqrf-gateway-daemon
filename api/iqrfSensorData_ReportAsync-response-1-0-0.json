{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQRF Sensor Data - Asynchronous report",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfSensorData_ReportAsync" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload..",
      "type": "object",
      "required": [
        "msgId",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response object",
          "description": "Response object.",
          "type": "object",
          "required": [
            "reading"
          ],
          "additionalProperties": false,
          "properties": {
            "reading": {
              "title": "Reading data",
              "description": "Sensor data reading in progress.",
              "type": "boolean"
            },
            "devices": {
              "title": "Devices",
              "description": "Array of devices and sensors data.",
              "type": "array",
              "maxItems": 239,
              "additionalItems": false,
              "items": {
                "title": "Device",
                "description": "Device and sensors data.",
                "type": "object",
                "required": [
                  "address",
                  "hwpid",
                  "mid",
                  "rssi",
                  "sensors"
                ],
                "additionalProperties": false,
                "properties": {
                  "address": {
                    "$ref": "definitions.json#/node/address"
                  },
                  "hwpid": {
                    "$ref": "definitions.json#/response/hwpId"
                  },
                  "mid": {
                    "oneOf": [
                      {
                        "$ref": "definitions.json#/transceiver/id"
                      },
                      { "type": "null" }
                    ]
                  },
                  "rssi": {
                  },
                  "voltage": {
                    "$ref": "definitions.json#/device/voltage"
                  },
                  "sensors": {
                    "title": "Sensors",
                    "description": "Sensor information and values.",
                    "type": "array",
                    "maxItems": 32,
                    "items": {
                      "title": "Sensor",
                      "description": "Sensor information and value.",
                      "type": "object",
                      "required": [
                        "index",
                        "type",
                        "name",
                        "unit",
                        "value"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "index": {
                          "title": "Sensor index",
                          "description": "Index of sensor on device.",
                          "type": "integer",
                          "minimum": 0,
                          "maximum": 31
                        },
                        "type": {
                          "$ref": "definitions.json#/interoperability/sensor/type"
                        },
                        "name": {
                          "$ref": "definitions.json#/interoperability/sensor/name"
                        },
                        "unit": {
                          "$ref": "definitions.json#/interoperability/sensor/unit"
                        },
                        "value": {
                          "$ref": "definitions.json#/interoperability/sensor/value"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral Coordinator - SmartConnect response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfEmbedCoordinator_SmartConnect" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "pNum": {
              "$ref": "definitions.json#/peripheral/number"
            },
            "pCmd": {
              "$ref": "definitions.json#/peripheral/command"
            },
            "hwpId": {
              "$ref": "definitions.json#/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "bondAddr",
                "devNr"
              ],
              "additionalProperties": false,
              "properties": {
                "bondAddr": {
                  "title": "Bonded address",
                  "description": "Address of the node newly bonded to the network.",
                  "$ref": "definitions.json#/node/address"
                },
                "devNr": {
                  "title": "Device number",
                  "description": "Number of bonded network nodes.",
                  "$ref": "definitions.json#/node/count"
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/dpa/timeout"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQRF DB - GetBinaryOutputs response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfDb_GetBinaryOutputs" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "binoutDevices"
          ],
          "additionalProperties": false,
          "properties": {
            "binoutDevices": {
              "title": "BinaryOutput devices",
              "descriptions": "Array of devices implementing BinaryOutput standard and count of implemented binary outputs.",
              "type": "array",
              "items": {
                "title": "BinaryOutput device",
                "description": "Object containing address of device and number of implemented binary outputs.",
                "type": "object",
                "required": [
                  "address",
                  "count"
                ],
                "additionalProperties": false,
                "properties": {
                  "address": {
                    "title": "Device address",
                    "description": "Address of device implementing BinaryOutput standard.",
                    "$ref": "definitions.json#/node/address"
                  },
                  "count": {
                    "title": "Binout count",
                    "description": "Number of implemented binary outputs.",
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 32
                  }
                }
              }
            }
          }
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        }
      }
    }
  }
}

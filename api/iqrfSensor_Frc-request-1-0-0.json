{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Interoperability Standard Sensor - FRC request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfSensor_Frc" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "nAdr",
            "param"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/general/nAdr"
            },
            "hwpId": {
              "$ref": "definitions.json#/general/request/hwpId"
            },
            "param": {
              "title": "Request parameters",
              "description": "Specific request parameters.",
              "type": "object",
              "required": [
                "frcCommand",
                "sensorType",
                "sensorIndex"
              ],
              "additionalProperties": false,
              "properties": {
                "frcCommand": {
                  "$ref": "definitions.json#/interoperability/sensor/frcCommand"
                },
                "selectedNodes": {
                  "$ref": "definitions.json#/interoperability/selectedNodes"
                },
                "sensorType": {
                  "$ref": "definitions.json#/interoperability/sensor/type"
                },
                "sensorIndex": {
                  "$ref": "definitions.json#/interoperability/sensor/index"
                },
                "sleepAfterFrc": {
                  "description": "Optional 'sleep after FRC' parameters to put the nodes into sleep mode after the FRC is finished.",
                  "type": "object",
                  "required": [
                    "time",
                    "control"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "time": {
                      "type": "integer",
                      "description": "Sleep time in 2.097 s or 32.768 ms units. See https://doc.iqrf.org/DpaTechGuide/index.html?page=sleep.html.",
                      "minimum": 0,
                      "maximum": 65535
                    },
                    "control": {
                      "type": "integer",
                      "description": "See https://doc.iqrf.org/DpaTechGuide/index.html?page=sleep.html.",
                      "minimum": 0,
                      "maximum": 255
                    }
                  }
                },
                "getExtraResult": {
                  "type": "boolean",
                  "description": "If set Extra result DPA message is sent and processed",
                  "default": true
                },
                "extFormat": {
                  "type": "boolean",
                  "description": "Sensors returns in extended format",
                  "default": false
                }
              }
            }
          }
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/general/returnVerbose"
        }
      }
    }
  }
}

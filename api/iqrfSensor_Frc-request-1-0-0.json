{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQRF Sensor - Frc",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Standard peripheral Sensor - FRC request.",
			"const": "iqrfSensor_Frc"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/embed/coordinator/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"sensorType",
								"sensorIndex",
								"frcCommand"
							],
							"additionalProperties": false,
							"properties": {
								"sensorType": {"$ref": "file://definitions.json#/standard/sensor/type"},
								"sensorIndex": {"$ref": "file://definitions.json#/standard/sensor/index"},
								"frcCommand": {
									"$id": "#/properties/data/properties/req/properties/param/properties/frcCommand",
									"title": "FRC command",
									"description": "FRC command code supported by the sensor type. 16 = 2 bits, 144 = 1 byte, 224 = 2 bytes, 249 = 4 bytes.",
									"type": "integer",
									"enum": [16, 144, 224, 249]
								},
								"sleepAfterFrc": {
									"$id": "#/properties/data/properties/req/properties/param/properties/sleepAfterFrc",
									"title": "Sleep after FRC",
									"description": "Object with the following fields to put the nodes into sleep mode after the FRC is finished.",
									"type": "object",
									"required": [
										"time",
										"control"
									],
									"additionalProperties": false,
									"properties": {
										"time": {
											"$id": "#/properties/data/properties/req/properties/param/properties/sleepAfterFrc/properties/time",
											"title": "Sleep time",
											"description": "Sleep time in 32.768ms or 2.097s units. Value 0 specifies endless sleep. Maximum sleep time 35 minutes and 47.48 seconds, or 38 hours and 10 minutes.",
											"type": "integer",
											"minimum": 0,
											"maximum": 65535
										},
										"control": {
											"$id": "#/properties/data/properties/req/properties/param/properties/sleepAfterFrc/properties/control",
											"title": "Sleep control",
											"description": "Bit value based configuration, see DPA guide for more information.",
											"type": "integer",
											"minimum": 0,
											"maximum": 63,
											"default": 0
										}
									}
								},
								"selectedNodes": {"$ref": "file://definitions.json#/general/request/selectedNodes"},
								"getExtraResult": {"$ref": "file://definitions.json#/standard/frc/getExtraResult"},
								"extFormat": {"$ref": "file://definitions.json#/standard/frc/extFormat"}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Embedded Peripheral Explore - Get information for more peripherals response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfEmbedExplore_MorePeripheralsInformation" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pnum",
            "pcmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/general/nAdr"
            },
            "pnum": {
              "$ref": "definitions.json#/general/response/pnum"
            },
            "pcmd": {
              "$ref": "definitions.json#/general/response/pcmd"
            },
            "hwpId": {
              "$ref": "definitions.json#/general/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/general/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/general/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "peripherals"
              ],
              "additionalProperties": false,
              "properties": {
                "peripherals": {
                  "type": "array",
                  "description": "Returns the same information as Get peripheral information but for up to 14 peripherals of consecutive indexes starting with the specified PCMD.",
                  "maxItems": 14,
                  "items": {
                    "type": "object",
                    "properties": {
                      "perTe": {
                        "type": "integer",
                        "description": "Extended peripheral characteristic. See Extended Peripheral Characteristic constants.",
                        "minimum": 0,
                        "maximum": 255
                      },
                      "perT": {
                        "type": "integer",
                        "description": "Peripheral type. If the peripheral is not supported or enabled, then PerTx = PERIPHERAL_TYPE_DUMMY. See Peripheral Types constants.",
                        "minimum": 0,
                        "maximum": 255
                      },
                      "par1": {
                        "type": "integer",
                        "description": "Optional peripheral specific information.",
                        "minimum": 0,
                        "maximum": 255
                      },
                      "par2": {
                        "type": "integer",
                        "description": "Optional peripheral specific information.",
                        "minimum": 0,
                        "maximum": 255
                      }
                    },
                    "required": [
                      "perTe",
                      "perT",
                      "par1",
                      "par2"
                    ]
                  }
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/general/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        }
      }
    }
  }
}

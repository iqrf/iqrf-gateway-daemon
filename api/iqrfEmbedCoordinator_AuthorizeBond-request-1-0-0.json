{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral Coordinator - Authorize bond request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfEmbedCoordinator_AuthorizeBond" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Contains request specific parameters.",
          "type": "object",
          "required": [
            "nAdr",
            "param"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "hwpId": {
              "$ref": "definitions.json#/request/hwpId"
            },
            "param": {
              "oneOf": [
                {
                  "$ref": "#/$localDefinitions/node"
                },
                {
                  "title": "Request parameters",
                  "description": "Specific request parameters.",
                  "type": "object",
                  "required": [
                    "nodes"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "nodes": {
                      "title": "Nodes",
                      "description": "Prebonded nodes which shall be authorized.",
                      "type": "array",
                      "additionalItems": false,
                      "minItems": 1,
                      "items": {
                        "$ref": "#/$localDefinitions/node"
                      }
                    }
                  }
                }
              ]
            }
          }
        },
        "timeout": {
          "$ref": "definitions.json#/dpa/timeout"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  },
  "$localDefinitions": {
    "node": {
      "title": "Node",
      "description": "Information about a prebonded node which shall be authorized",
      "type": "object",
      "required": [
        "reqAddr",
        "mid"
      ],
      "additionalProperties": false,
      "properties": {
        "reqAddr": {
          "$ref": "definitions.json#/node/address"
        },
        "mid": {
          "$ref": "definitions.json#/transciever/id"
        }
      }
    }
  }
}

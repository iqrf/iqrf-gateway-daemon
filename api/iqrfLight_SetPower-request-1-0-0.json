{
	"$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/latest/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
	"self": {
		"vendor": "com.iqrftech.self-desc",
		"name": "iqrfLight_SetPower-request",
		"format": "jsonschema",
		"version": "1-0-0"
	},
	"title": "IQRF Light - Set Power",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$id": "#/properties/mType",
			"title": "Message type",
			"description": "Standard peripheral Light - Set Power request.",
			"type": "string",
			"enum": [
				"iqrfLight_SetPower"
			]
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {
					"$id": "#/properties/data/properties/msgId",
					"title": "Message ID",
					"description": "Message identification for binding request with response.",
					"type": "string"
				},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {
							"$id": "#/properties/data/properties/req/properties/nAdr",
							"title": "Node address",
							"description": "Network device address.",
							"type": "integer",
							"minimum": 0,
							"maximum": 239
						},
						"hwpId": {
							"$id": "#/properties/data/properties/req/properties/hwpid",
							"title": "Device HWPID",
							"description": "Hardware profile identification.",
							"type": "integer",
							"minimum": 0,
							"maximum": 65535,
							"default": 65535
						},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuraiton parameters.",
							"type": "object",
							"required": [
								"lights"
							],
							"additionalProperties": false,
							"properties": {
								"lights": {
									"$id": "#/properties/data/properties/req/properties/param/lights",
									"title": "Lights configuration",
									"description": "Array of objects containing configuration of lights.",
									"type": "array",
									"additionalItems": false,
									"minItems": 1,
									"items": {
										"$id": "#/properties/data/properties/req/properties/param/lights/items",
										"title": "Light configuration",
										"description": "Configuration of a single light.",
										"type": "object",
										"required": [
											"index",
											"power"
										],
										"additionalProperties": false,
										"properties": {
											"index": {
												"$id": "#/properties/data/properties/req/properties/param/lights/items/properties/index",
												"title": "Light index",
												"description": "Zero based index of the light to set.",
												"type": "integer",
												"minimum": 0,
												"maximum": 31
											},
											"power": {
												"$id": "#/properties/data/properties/req/properties/param/lights/items/properties/power",
												"title": "Light power",
												"description": "Power level of the light from range <0;100>. Value 127 keeps current power level allowing to only report power level.",
												"type": "integer",
												"oneOf": [
													{
														"minimum": 0,
														"maximum": 100
													},
													{
														"enum": [127]
													}
												]
											},
											"time": {
												"$id": "#/properties/data/properties/req/properties/param/lights/items/properties/power",
												"title": "Light ON timer",
												"description": "Time in seconds. Allowed values are <1;127> or 60*<1;127>.",
												"type": "integer",
												"anyOf": [
													{
														"minimum": 1,
														"maximum": 127
													},
													{
														"minimum": 60,
														"maximum": 7620,
														"multipleOf": 60
													}
												]
											}
										}
									}
								}
							}
						}
					}
				},
				"timeout": {
					"$id": "#/properties/data/properties/timeout",
					"title": "Request timeout",
					"description": "Timeout to wait for IQRF DPA response.",
					"type": "integer"
				},
				"returnVerbose": {
					"$id": "#/properties/data/properties/returnVerbose",
					"title": "Verbose response",
					"description": "Flag that includes additional parameters in the response.",
					"type": "boolean"
				}

			}
		}
	}
}

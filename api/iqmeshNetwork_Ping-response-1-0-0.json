{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Ping response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_Ping" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "hwpId"
          ],
          "additionalProperties": false,
          "properties": {
            "hwpId": {
              "$ref": "definitions.json#/response/hwpId"
            },
            "nodesNr": {
              "$ref": "definitions.json#/node/count"
            },
            "inaccessibleNodesNr": {
              "$ref": "definitions.json#/frc/inaccessibleCnt"
            },
            "pingResult": {
              "title": "Ping results",
              "description": "List of ping results.",
              "type": "array",
              "maxItems": 239,
              "items": {
                "title": "Ping result",
                "description": "Ping result for a single node device.",
                "type": "object",
                "required": [
                  "address",
                  "result"
                ],
                "additionalProperties": false,
                "properties": {
                  "address": {
                    "$ref": "definitions.json#/node/address"
                  },
                  "result": {
                    "title": "Ping result",
                    "description": "Node device ping result.",
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        }
      }
    }
  }
}

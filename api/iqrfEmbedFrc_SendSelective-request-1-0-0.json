{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral FRC - Send Selective request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfEmbedFrc_SendSelective" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "nAdr",
            "param"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "hwpId": {
              "$ref": "definitions.json#/request/hwpId"
            },
            "param": {
              "title": "Request parameters",
              "description": "Specific request parameters.",
              "type": "object",
              "required": [
                "frcCommand",
                "selectedNodes",
                "userData"
              ],
              "additionalProperties": false,
              "properties": {
                "frcCommand": {
                  "type": "integer",
                  "description": "Specifies data to be collected.",
                  "minimum": 0,
                  "maximum": 255
                },
                "selectedNodes": {
                  "type": "array",
                  "description": "Indexes of the selected nodes.",
                  "minItems": 1,
                  "maxItems": 255,
                  "uniqueItems": true,
                  "additionalItems": false,
                  "items": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255
                  }
                },
                "userData": {
                  "type": "array",
                  "description": "User data.",
                  "items": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 2,
                  "maxItems": 25
                }
              }
            }
          }
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/general/returnVerbose"
        }
      }
    }
  }
}

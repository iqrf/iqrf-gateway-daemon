{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQMESH Network - Restore",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "IQMESH Network management - Restore request.",
			"const": "iqmeshNetwork_Restore"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"deviceAddr",
						"data"
					],
					"additionalProperties": false,
					"properties": {
						"deviceAddr": {
							"$ref": "file://definitions.json#/embed/coordinator/reqAddr",
							"description": "Address of device in network. 0 = Coordinator, 1..239 = Node."
						},
						"data": {"$ref": "file://definitions.json#/iqmesh/backupRestore/data"},
						"restartCoordinator": {
							"$id": "#/properties/data/properties/req/properties/restartCoordinator",
							"title": "Restart coordinator",
							"description": "Restart Coordinator after restore.",
							"type": "boolean",
							"default": true
						}
					}
				},
				"repeat": {"$ref": "file://definitions.json#/iqmesh/general/repeat"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

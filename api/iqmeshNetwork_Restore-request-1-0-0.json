{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Restore request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_Restore" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Contains request specific parameters.",
          "type": "object",
          "required": [
            "data",
            "deviceAddr"
          ],
          "additionalProperties": false,
          "properties": {
            "deviceAddr": {
              "description": "Address of device to restore. [0: coordinator, 1-239: node]",
              "$ref": "definitions.json#/node/address"
            },
            "data": {
              "description": "Raw device backup data encoded as hexadecimal string.",
              "type": "string",
              "examples": [
                "a900504aa1f5920c355a36a5ce0147c7d2688b44b17bf0151ea26e1b4eae"
              ]
            },
            "restartCoordinator": {
              "description": "Restart Coordinator after restore.",
              "type": "boolean"
            }
          }
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

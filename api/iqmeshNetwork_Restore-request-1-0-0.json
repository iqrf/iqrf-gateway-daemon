{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Restore request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_Restore" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "data",
            "deviceAddr"
          ],
          "additionalProperties": false,
          "properties": {
            "deviceAddr": {
              "allOf": [
                { "$ref": "definitions.json#/node/address" },
                {
                  "description": "Address of device to restore (0 - [C] device, 1..239 - [N] device)",
                  "default": 0
                }
              ]
            },
            "data": {
              "description": "Device Backup Data (hex-string format).",
              "type": "string"
            },
            "restartCoordinator": {
              "description": "Restart Coordinator after restore.",
              "type": "boolean"
            }
          }
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

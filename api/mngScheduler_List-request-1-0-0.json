{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Scheduler management - List tasks request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "mngScheduler_List" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "clientId"
          ],
          "additionalProperties": false,
          "properties": {
            "clientId": {
              "$ref": "definitions.json#/scheduler/clientId"
            },
            "details": {
              "title": "Scheduled task details",
              "description": "Retrieve task details instead of task IDs.",

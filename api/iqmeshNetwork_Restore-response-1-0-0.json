{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Restore response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqmeshNetwork_Restore" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "devices",
            "progress"
          ],
          "additionalProperties": false,
          "properties": {
            "devices": {
              "description": "Restore statuses of affected devices.",
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "deviceAddr",
                  "restoreStatus"
                ],
                "additionalProperties": false,
                "properties": {
                  "deviceAddr": {
                    "$ref": "definitions.json#/general/nAdr"
                  },
                  "restoreStatus": {
                    "description": "Result of restore operation.",
                    "type": "boolean"
                  }
                }
              }
            },
            "progress": {
              "$ref": "definitions.json#/iqmesh/progress"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        }
      }
    }
  }
}

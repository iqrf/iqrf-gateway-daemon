{
	"$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/latest/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
	"self": {
		"vendor": "com.iqrftech.self-desc",
		"name": "iqmeshNetwork_Ping-request",
		"format": "jsonschema",
		"version": "1-0-0"
	},
	"title": "IQMESH Network - Ping",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$id": "#/properties/mType",
			"title": "Message type",
			"description": "IQMESH Network management - Ping request.",
			"type": "string",
			"enum": [
				"iqmeshNetwork_Ping"
			]
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data.",
			"description": "Message metadata and body.",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {
					"$id": "#/properties/data/properties/msgId",
					"title": "Message ID",
					"description": "Message ID used for pairing requests and responses.",

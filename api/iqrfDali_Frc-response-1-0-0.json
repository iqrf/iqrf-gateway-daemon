{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQRF Dali - Frc",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Standard peripheral DALI - FRC response.",
			"const": "iqrfDali_Frc"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"rsp",
				"status"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"rsp": {
					"$id": "#/properties/data/properties/rsp",
					"title": "Response data",
					"description": "Response body object",
					"type": "object",
					"required": [
						"nAdr",
						"hwpId",
						"rCode",
						"dpaVal"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/general/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/response/hwpId"},
						"rCode": {"$ref": "file://definitions.json#/general/response/rCode"},
						"dpaVal": {"$ref": "file://definitions.json#/general/response/dpaVal"},
						"result": {
							"$id": "#/properties/data/properties/rsp/properties/result",
							"title": "Result object",
							"description": "Request result data.",
							"type": "object",
							"required": [
								"answers"
							],
							"additionalProperties": false,
							"properties": {
								"answers": {
									"$id": "#/properties/data/properties/rsp/properties/result/properties/answers",
									"title": "Array of DALI answers",
									"description": "Returns array of objects for every DALI 2B command.",
									"type": "array",
									"additionalItems": false,
									"items": {
										"$id": "#/properties/data/properties/rsp/properties/result/properties/answers/items",
										"oneOf": [
											{
												"title": "Base answer",
												"description": "Default answer object without additional information.",
												"type": "object",
												"required": [
													"status",
													"value"
												],
												"properties": {
													"status": {"$ref": "file://definitions.json#/standard/dali/status"},
													"value": {"$ref": "file://definitions.json#/standard/dali/value"}
												}
											},
											{
												"title": "Extended answer",
												"description": "Answer object with additional information about a node device.",
												"type": "object",
												"required": [
													"nAdr",
													"answer"
												],
												"properties": {
													"nAdr": {"$ref": "file://definitions.json#/general/nAdr"},
													"metaData": {"$ref": "file://definitions.json#/general/metaData"},
													"answer": {
														"type": "object",
														"required": [
															"status",
															"value"
														],
														"properties": {
															"status": {"$ref": "file://definitions.json#/standard/dali/status"},
															"value": {"$ref": "file://definitions.json#/standard/dali/value"}
														}
													}
												}
											}
										]
									}
								}
							}
						},
						"errorStr": {"$ref": "file://definitions.json#/general/response/errorStr"}
					}
				},
				"raw": {"$ref": "file://definitions.json#/general/response/raw"},
				"insId": {"$ref": "file://definitions.json#/general/response/insId"},
				"status": {"$ref": "file://definitions.json#/general/response/status"},
				"statusStr": {"$ref": "file://definitions.json#/general/response/statusStr"},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"}
			}
		}
	}
}

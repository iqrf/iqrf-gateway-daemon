{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - OTA Upload request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqmeshNetwork_OtaUpload" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "deviceAddr",
            "fileName",
            "startMemAddr",
            "loadingAction"
          ],
          "additionalProperties": false,
          "properties": {
            "deviceAddr": {
              "$ref": "definitions.json#/node/address"
            },
            "hwpId": {
              "$ref": "definitions.json#/request/hwpId"
            },
            "fileName": {
              "title": "File name",
              "description": "Full name of file with source code to load.",
              "type": "string"
            },
            "startMemAddr": {
              "title": "Starting memory address",
              "description": "Start address on which will be the data saved into memory.",
              "type": "integer"
            },
            "loadingAction": {
              "$ref": "definitions.json#/iqmesh/ota/loadingAction"
            },
            "uploadEepromData": {
              "description": "Upload internal eeprom data from hex file.",
              "type": "boolean"
            },
            "uploadEeepromData": {
              "description": "Upload external eeprom data from hex file.",
              "type": "boolean"
            }
          }
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/general/returnVerbose"
        }
      }
    }
  }
}

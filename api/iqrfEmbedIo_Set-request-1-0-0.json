{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Embed IO - Set",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Embedded peripheral IO - Set request.",
			"const": "iqrfEmbedIo_Set"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/general/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"ports"
							],
							"additionalProperties": false,
							"properties": {
								"ports": {
									"$id": "#/properties/data/properties/req/properties/param/properties/ports",
									"title": "MCU ports",
									"description": "Array of MCU ports to set values to, also allows to insert delay between IO pins configuration.",
									"type": "array",
									"minItems": 1,
									"maxItems": 17,
									"additionalItems": false,
									"items": {
										"$id": "#/properties/data/properties/req/properties/param/properties/ports/items",
										"title": "MCU port",
										"description": "Single MCU port configuration.",
										"type": "object",
										"oneOf": [
											{
												"required": [
													"port",
													"mask",
													"value"
												],
												"additionalProperties": false,
												"properties": {
													"port": {
														"$id": "#/properties/data/properties/req/properties/param/properties/ports/items/properties/port",
														"title": "MCU port",
														"description": "Specify port to set output state of, 0x00-0x07 (0-7).",
														"type": "integer",
														"minimum": 0,
														"maximum": 7
													},
													"mask": {"$ref": "file://definitions.json#/embed/io/mask"},
													"value": {
														"$id": "#/properties/data/properties/req/properties/param/properties/ports/items/properties/value",
														"title": "Pin value",
														"description": "Output value for masked pins.",
														"type": "integer",
														"enum": [0, 1]
													}
												}
											},
											{
												"required":[
													"delay"
												],
												"additionalProperties": false,
												"properties": {
													"delay": {
														"$id": "#/properties/data/properties/req/properties/param/properties/ports/items/properties/delay",
														"title": "Delay to insert",
														"description": "Delay in ms to be inserted before executing the next operation.",
														"type": "integer",
														"minimum": 0,
														"maximum": 65535
													}
												}
											}
										]
									}
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

{
    "$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/latest/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
    "self": {
        "vendor": "com.iqrftech.self-desc",
        "name": "mngDaemon_Exit-request",
        "format": "jsonschema",
        "version": "1-0-0"
    },
    "title": "Daemon management - Exit",
    "type": "object",
    "required": [
        "mType",
        "data"
    ],
    "additionalProperties": false,
    "properties": {
        "mType": {
            "$id": "#/properties/mType",
            "title": "Message type",
            "description": "Daemon runtime management - exit request message.",
            "type": "string",
            "enum": [
                "mngDaemon_Exit"
            ]
        },
        "data": {
            "$id": "#/properties/data",
            "title": "Message data",
            "description": "Message metadata and arguments",
            "type": "object",
            "required": [
                "msgId",
                "req"
            ],
            "additionalProperties": false,
            "properties": {
                "msgId": {
                    "$id": "#/properties/data/properties/msgId",
                    "type": "string",
                    "title": "Message ID",
                    "description": "Message identification for binding request with response."
                },
                "req": {
                    "$id": "#/properties/data/properties/req",
                    "title": "Request object",
                    "description": "Request parameters",
                    "type": "object",
                    "required": [
                        "timeToExit"
                    ],
                    "properties": {
                        "timeToExit": {
                            "$id": "#/properties/data/properties/req/properties/timeToExit",
                            "title": "Time to exit",
                            "description": "Time to exit the daemon in ms.",
                            "type": "number",
                            "minimum": 0,
                            "example": 10000
                        }
                    }
                },
                "returnVerbose": {
                    "$id": "#/properties/data/properties/returnVerbose",
                    "title": "Verbose response",
                    "description": "Flag that includes additional parameters in the response.",
                    "type": "boolean"
                }
            }
        }
    }    
}

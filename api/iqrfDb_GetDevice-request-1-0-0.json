{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQRF DB - GetDevice request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfDb_GetDevice" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "address"
          ],
          "additionalProperties": false,
          "properties": {
            "address": {
              "title": "Device address",
              "description": "Address of device in network.",
              "$ref": "definitions.json#/general/nAdr"
            },
            "sensors": {
              "$ref": "definitions.json#/iqrfDb/sensors"
            },
            "binouts": {
              "$ref": "definitions.json#/iqrfDb/binouts"
            },
            "brief": {
              "$ref": "definitions.json#/iqrfDb/brief"
            }
          }
        },
        "returnVerbose": {
          "$ref": "definitions.json#/general/returnVerbose"
        }
      }
    }
  }
}

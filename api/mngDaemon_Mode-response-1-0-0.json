{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Daemon Management - Change daemon mode response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "mngDaemon_Mode" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "operMode"
          ],
          "additionalProperties": false,
          "properties": {
            "operMode": {
              "title": "Daemon mode",
              "description": "Confirms selected operation mode or returns current one if empty mode was sent.",
              "type": "string",
              "enum": [
                "operational",
                "service",
                "forwarding",
                "unknown"
              ]
            }
          }
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        },
        "errorStr": {
          "$ref": "definitions.json#/response/errorStr"
        }
      }
    }
  }
}

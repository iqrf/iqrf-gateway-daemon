{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQMESH Network - BondNodeLocal",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "IQMESH Network management - Bond Node Local request.",
			"const": "iqmeshNetwork_BondNodeLocal"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"deviceAddr"
					],
					"additionalProperties": false,
					"properties": {
						"deviceAddr": {
							"$ref": "file://definitions.json#/embed/coordinator/reqAddr",
							"description": "Requested network address to bond node to. If set to 0, first free address will be used."
						},
						"bondingMask": {"$ref": "file://definitions.json#/embed/coordinator/bondingMask"},
						"bondingTestRetries": {"$ref": "file://definitions.json#/embed/coordinator/bondingTestRetries"}
					}
				},
				"repeat": {"$ref": "file://definitions.json#/iqmesh/general/repeat"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Embed Coordinator - SmartConnect",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Embedded peripheral Coordinator - Smart Connect request.",
			"const": "iqrfEmbedCoordinator_SmartConnect"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/embed/coordinator/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"reqAddr",
								"bondingTestRetries",
								"ibk",
								"mid",
								"virtualDeviceAddress",
								"userData"
							],
							"additionalProperties": false,
							"properties": {
								"reqAddr": {
									"$ref": "file://definitions.json#/embed/coordinator/reqAddr",
									"description": "A requested address for the bonded node. The address must not be used (bonded) yet. If this parameter equals to 0, then the 1st free address is assigned to the node."
								},
								"bondingTestRetries": {"$ref": "file://definitions.json#/embed/coordinator/bondingTestRetries"},
								"ibk": {"$ref": "file://definitions.json#/embed/os/ibk"},
								"mid": {
									"$ref": "file://definitions.json#/embed/os/mid",
									"description": "MID of the Node to bond."
								},
								"virtualDeviceAddress": {
									"$id": "#/properties/data/properties/req/properties/param/properties/virtualDeviceAddress",
									"title": "Virtual device address.",
									"description": "Must equal to 0xFF if not used.",
									"type": "integer",
									"minimum": 0,
									"maximum": 255,
									"default": 255
								},
								"userData": {
									"$id": "#/properties/data/properties/req/properties/param/properties/userData",
									"title": "User data",
									"description": "Optional data passed to the bonded node.",
									"type": "array",
									"minItems": 4,
									"maxItems": 4,
									"additionalItems": false,
									"items": {
										"title": "Data byte",
										"description": "Byte of optional user data",
										"type": "integer",
										"minimum": 0,
										"maximum": 255,
										"default": 0
									}
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

{
	"$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/latest/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
	"self": {
		"vendor": "com.iqrftech.self-desc",
		"name": "iqrfRaw-request",
		"format": "jsonschema",
		"version": "1-0-0"
	},
	"title": "Raw message request",
	"description": "Message type for Raw communication.",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$id": "#/properties/mType",
			"title": "Message type",
			"type": "string",
			"enum": [
				"iqrfRaw"
			]
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {
					"$id": "#/properties/data/properties/msgId",
					"title": "Message ID",
					"description": "Message identification for binding request with response.",
					"type": "string"
				},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request object",
					"type": "object",
					"required": [
						"rData"
					],
					"additionalProperties": false,
					"properties": {
						"rData": {
							"$id": "#$/properties/data/properties/req/properties/rData",
							"description": "Binary buffer with DPA request",
							"type": "string",
							"pattern": "^(?i)([0-9a-e][0-9a-f]|f0)\\.00\\.(0[0-9a-d]|4a|4b|5e|71)\\.[0-7][0-9a-f]((\\.[0-9a-f]{2}){2})((\\.[0-9a-f]{2}){0,58})$"
						}
					}
				},
				"timeout": {
					"$id": "#/properties/data/properties/timeout",
					"title": "Message timeout",
					"description": "Timeout to wait for IQRF DPA response in milliseconds",
					"type": "integer",
					"minimum": 500,
					"example": 1000
				},
				"returnVerbose": {
					"$id": "#/properties/data/properties/returnVerbose",
					"title": "Verbose response",
					"description": "Flag that includes additional parameters in the response.",
					"type": "boolean"
				}
			}
		}
	}
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Raw DPA request",
  "description": "Â© IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        {
          "description": "Message type for Raw DPA communication.",
          "const": "iqrfRaw"
        }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Contains request specific parameters.",
          "type": "object",
          "required": [
            "rData"
          ],
          "additionalProperties": false,
          "properties": {
            "rData": {
              "description": "Raw DPA request encoded as comma separated hex bytes.",
              "type": "string",
              "examples": [
                "00.00.06.03.FF.FF"
              ]
            }
          }
        },
        "timeout": {
          "$ref": "definitions.json#/dpa/timeout"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

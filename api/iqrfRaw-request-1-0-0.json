{
	"$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/latest/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
	"self": {
		"vendor": "com.iqrftech.self-desc",
		"name": "iqrfRaw-request",
		"format": "jsonschema",
		"version": "1-0-0"
	},
	"title": "Raw message request",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$id": "#/properties/mType",
			"title": "Message type",
			"description": "Message type for Raw communication.",
			"type": "string",
			"enum": [
				"iqrfRaw"
			]
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {
					"$id": "#/properties/data/properties/msgId",
					"title": "Message ID",
					"description": "Message identification for binding request with response.",
					"type": "string"
				},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"rData"
					],
					"additionalProperties": false,
					"properties": {
						"rData": {
							"$ref": "file://common.json#/definitions/rawRequestData"
						}
					}
				},
				"timeout": {
					"$id": "#/properties/data/properties/timeout",
					"title": "Request timeout",
					"description": "Timeout to wait for IQRF DPA response.",
					"type": "integer",
					"minimum": 500
				},
				"returnVerbose": {
					"$id": "#/properties/data/properties/returnVerbose",
					"title": "Verbose response",
					"description": "Flag that includes additional parameters in the response.",
					"type": "boolean"
				}
			}
		}
	}
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQRF DB - Enumerate request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfDb_Enumerate" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Contains request specific parameters.",
          "type": "object",
          "required": [],
          "additionalProperties": false,
          "properties": {
            "standards": {
              "title": "Enumerate standards",
              "description": "Enumerate IQRF standards.",
              "type": "boolean"
            },
            "reenumerate": {
              "title": "Force re-enumeration",
              "description": "Re-enumerate all devices. This includes IQRF standards enumeration.",
              "type": "boolean"
            }
          }
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

							"$id": "#/general/response/raw/items/properties/confirmationTs",
							"title": "Confirmation timestamp",
							"description": "YYYY-MM-DDTHH:MM:SS.SSS±HH:MM",
							"oneOf": [
								{
									"$ref": "#/patterns/timestamp"
								},
								{
									"const": ""
								}
							]
						},

							"$id": "#/general/response/raw/items/properties/response",
							"title": "Response DPA",
							"oneOf": [
								{
									"$ref": "#/patterns/responseDpa"
								},
								{
									"const": ""
								}
							]
						},
						"responseTs": {
							"$id": "#/general/response/raw/items/properties/responseTs",
							"title": "Response timestamp",
							"description": "YYYY-MM-DDTHH:MM:SS.SSS±HH:MM",

  "sensorData": {
    "autoRun": {
      "title": "Run worker automatically",
      "description": "Start sensor data reading worker on startup.",
      "type": "boolean"
    },
    "period": {
      "title": "Reading period",
      "description": "Time between data reads in minutes.",

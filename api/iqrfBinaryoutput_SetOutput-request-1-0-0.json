{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQRF BinaryOutput - SetOutput",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Standard peripheral Binary Output - Set Output request.",
			"const": "iqrfBinaryoutput_SetOutput"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/general/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuraiton parameters.",
							"type": "object",
							"required": [
								"binOuts"
							],
							"additionalProperties": false,
							"properties": {
								"binOuts": {
									"$id": "#/properties/data/properties/req/properties/param/properties/binOuts",
									"title": "Binary outputs configuration",
									"description": "Array of objects containing configuration of binary outputs.",
									"type": "array",
									"additionalItems": false,
									"items": {
										"$id": "#/properties/data/properties/req/properties/param/properties/binOuts/items",
										"title": "Binary output configuration",
										"description": "Configuration of a single binary output",
										"type": "object",
										"required": [
											"index",
											"state"
										],
										"additionalProperties": false,
										"properties": {
											"index": {"$ref": "file://definitions.json#/standard/index"},
											"state": {
												"$id": "#/properties/data/properties/req/properties/param/properties/binOuts/items/properties/state",
												"title": "Binary output state",
												"description": "true to set ON state, false to set OFF state.",
												"type": "boolean"
											},
											"time": {"$ref": "file://definitions.json#/standard/time"}
										}
									}
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

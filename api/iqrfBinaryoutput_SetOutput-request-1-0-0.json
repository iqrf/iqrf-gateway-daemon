{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Interoperability Standard Binary Output - Set Output request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfBinaryoutput_SetOutput" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "required": [
            "nAdr",
            "param"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/general/nAdr"
            },
            "hwpId": {
              "$ref": "definitions.json#/general/request/hwpId"
            },
            "param": {
              "title": "Request parameters",
              "description": "Specific request parameters.",
              "type": "object",
              "required": [
              ],
              "additionalProperties": false,
              "properties": {
                "outputs": {
                  "type": "array",
                  "description": "Array of Binary Output settings.",
                  "items": {
                    "type": "object",
                    "required": [
                      "index",
                      "state"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "index": {
                        "type": "integer",
                        "description": "Zero based index of the binary output to set.",
                        "minimum": 0
                      },
                      "state": {
                        "type": "boolean",
                        "description": "New logical state of the binary output (true / false)."
                      },
                      "time": {
                        "type": "integer",
                        "description": "Sets ON state for this duration (in seconds), after the specified time switch to OFF. Allowed values are <1;127> or 60*<1;127>.",
                        "minimum": 1,
                        "maximum": 7620
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/general/returnVerbose"
        }
      }
    }
  }
}

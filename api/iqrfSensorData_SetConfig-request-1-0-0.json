{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQRF Sensor Data - Set configuration",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfSensorData_SetConfig" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request parameters",
          "description": "Request parameters.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "autoRun": {
              "$ref": "definitions.json#/sensorData/autoRun"
            },
            "period": {
              "$ref": "definitions.json#/sensorData/period"
            },
            "retryPeriod": {
              "$ref": "definitions.json#/sensorData/retryPeriod"
            },
            "asyncReports": {
              "$ref": "definitions.json#/sensorData/asyncReports"
            },
            "messagingList": {
              "$ref": "definitions.json#/sensorData/messagingList"
            }
          }
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

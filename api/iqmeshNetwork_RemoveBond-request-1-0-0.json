{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - RemoveBond request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_RemoveBond" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Holds request data",
          "type": "object",
          "oneOf": [
            {
              "required": [
                "deviceAddr"
              ]
            },
            {
              "required": [
                "allNodes"
              ]
            }
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "hwpId": {
              "title": "HWPID filter",
              "description": "Unbond devices with specified HWPID only.",
              "$ref": "definitions.json#/request/hwpId"
            },
            "deviceAddr": {
              "title": "Device(s) to unbond",
              "description": "Address of a device or array of device addresses to unbond.",
              "oneOf": [
                {
                  "$ref": "definitions.json#/node/address"
                },
                {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                    "$ref": "definitions.json#/node/address"
                  },
                  "maxItems": 239
                }
              ]
            },
            "allNodes": {
              "title": "Unbond all",
              "description": "Unbond all devices in network.",
              "type": "boolean",
              "const": true
            },
            "coordinatorOnly": {
              "title": "Coordinator only",
              "description": "Unbond nodes only in Coordinator.",
              "type": "boolean"
            }
          }
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - RemoveBond request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_RemoveBond" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "oneOf": [
            {
              "title": "Remove selected nodes",
              "description": "Specific request parameters for removing selected bonds.",
              "type": "object",
              "required": [
                "deviceAddr"
              ],
              "additionalProperties": false,
              "properties": {
                "nAdr": {
                  "$ref": "definitions.json#/node/address"
                },
                "hwpId": {
                  "$ref": "#/localDefinitions/hwpId"
                },
                "deviceAddr": {
                  "description": "Address of a device or array of device addresses to unbond.",
                  "oneOf": [
                    {
                      "description": "Address of a device to unbond.",
                      "$ref": "definitions.json#/node/address"
                    },
                    {
                      "description": "List of addresses of devices to unbond.",
                      "type": "array",
                      "items": {
                        "$ref": "definitions.json#/node/address"
                      },
                      "uniqueItems": true,
                      "maxItems": 239
                    }
                  ]
                },
                "coordinatorOnly": {
                  "$ref": "#/localDefinitions/coordinatorOnly"
                }
              }
            },
            {
              "title": "Remove all nodes",
              "description": "Specific request parameters for removing all bonds.",
              "type": "object",
              "required": [
                "allNodes"
              ],
              "additionalProperties": false,
              "properties": {
                "nAdr": {
                  "$ref": "definitions.json#/node/address"
                },
                "hwpId": {
                  "$ref": "#/localDefinitions/hwpId"
                },
                "allNodes": {
                  "title": "Unbond all",
                  "description": "Unbond all devices in the network.",
                  "type": "boolean",
                  "const": true
                },
                "coordinatorOnly": {
                  "$ref": "#/localDefinitions/coordinatorOnly"
                }
              }
            }
          ]
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  },
  "localDefinitions": {
    "coordinatorOnly": {
      "title": "Coordinator only",
      "description": "Unbond nodes only in Coordinator.",
      "type": "boolean"
    },
    "hwpId": {
      "title": "HWPID filter",
      "description": "Unbond devices with specified HWPID only.",
      "$ref": "definitions.json#/request/hwpId"
    }
  }
}

{
    "$schema": "https://apidocs.iqrf.org/iqrf-gateway-daemon/latest/com.iqrftech.self-desc/schema/jsonschema/1-0-0#",
    "self": {
        "vendor": "com.iqrftech.self-desc",
        "name": "cfgDaemon_Component-request",
        "format": "jsonschema",
        "version": "1-0-0"
    },
    "title": "Component configuration.",
    "description": "Component configuration update request.",
    "type": "object",
    "required": [
        "mType",
        "data"
    ],
    "additionalProperties": false,
    "properties": {
        "mType": {
            "$id": "#/properties/mType",
            "title": "Message type",
            "type": "string",
            "enum": [
                "cfgDaemon_Component"
            ]
        },
        "data": {
            "$id": "#/properties/data",
            "title": "Request data",
            "type": "object",
            "required": [
                "msgId",
                "req"
            ],
            "additionalProperties": false,
            "properties": {
                "msgId": {
                    "$id": "#/properties/data/properties/msgId",
                    "title": "Message ID",
                    "description": "Message identification for binding request with response.",
                    "type": "string"
                },
                "req": {
                    "$id": "#/properties/data/properties/req",
                    "title": "Request object",
                    "type": "object",
                    "required": [
                        "componentName", 
                        "componentInstance", 
                        "configuration"
                    ],
                    "additionalProperties": "false",
                    "properties": {
                        "componentName": {
                            "$id": "#/properties/data/properties/req/properties/componentName",
                            "description": "Component name.",
                            "type": "string"
                        },   
                        "componentInstance": {
                            "$id": "#/properties/data/properties/req/properties/componentInstance",
                            "description": "Component instance.",
                            "type": "string"
                        },                                                
                        "configuration": {
                            "$id": "#/properties/data/properties/req/properties/configuration",
                            "description": "Configuration Json.",
                            "type": "object"
                        }
                    }
                },
                "returnVerbose": {
                    "$id": "#/properties/data/properties/returnVerbose",
                    "description": "Flag that includes additional parameters in the response.",
                    "type": "boolean"
                }
            }
        }
    }
}

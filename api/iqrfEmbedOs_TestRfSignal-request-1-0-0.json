{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Embed OS - TestRfSignal",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Embedded peripheral OS - Test RF signal request.",
			"const": "iqrfEmbedOs_TestRfSignal"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/embed/coordinator/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"channel",
								"rxFilter",
								"time"
							],
							"additionalProperties": false,
							"properties": {
								"channel": {
									"$id": "#/properties/data/properties/req/properties/param/properties/channel",
									"title": "Channel number",
									"description": "The channel to test.",
									"type": "integer",
									"minimum": 0,
									"maximum": 255
								},
								"rxFilter": {"$ref": "file://definitions.json#/embed/os/rxFilter"},
								"time": {
									"$id": "#/properties/data/properties/req/properties/param/properties/time",
									"title": "Time",
									"description": "Signal test time interval. Unit in 10ms.",
									"type": "integer",
									"minimum": 0,
									"maximum": 65535
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}

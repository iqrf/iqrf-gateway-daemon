{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Interoperability Standard Sensor - FRC response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfSensor_Frc" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/general/nAdr"
            },
            "pNum": {
              "$ref": "definitions.json#/general/response/pNum"
            },
            "pCmd": {
              "$ref": "definitions.json#/general/response/pCmd"
            },
            "hwpId": {
              "$ref": "definitions.json#/general/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/general/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/general/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "sensors"
              ],
              "additionalProperties": false,
              "properties": {
                "sensors": {
                  "title": "Sensors",
                  "description": "Array of sensor objects.",
                  "type": "array",
                  "additionalItems": false,
                  "items": {
                    "oneOf": [
                      {
                        "title": "Unavailable",
                        "description": "Sensor data not available at the node",
                        "type": "null"
                      },
                      { "$ref": "#/$localDefinitions/sensor" },
                      {
                        "title": "Extended format",
                        "description": "Sensor data with node determination",
                        "type": "object",
                        "required": [
                          "nAdr",
                          "hwpid",
                          "mid",
                          "sensor"
                        ],
                        "additionalProperties": false,
                        "properties": {
                          "nAdr": {
                            "$ref": "definitions.json#/general/nAdr"
                          },
                          "hwpid": {
                            "$ref": "definitions.json#/general/response/hwpId"
                          },
                          "mid": {
                            "oneOf": [
                              { "type": "null" },
                              {
                                "$ref": "definitions.json#/device/mId"
                              }
                            ]
                          },
                          "metadata": {
                            "$ref": "definitions.json#/interoperability/frc/metadata"
                          },
                          "sensor": {
                            "oneOf": [
                              { "type": "null" },
                              { "$ref": "#/$localDefinitions/sensor" }
                            ]
                          }
                        }
                      }
                    ]
                  }
                },
                "sensorIndex": {
                  "$ref": "definitions.json#/interoperability/sensor/index"
                },
                "selectedNodes": {
                  "$ref": "definitions.json#/interoperability/frc/selectedNodes"
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/general/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        }
      }
    }
  },
  "$localDefinitions": {
    "sensor": {
      "title": "Sensor",
      "description": "Contains data from one sensor",
      "type": "object",
      "required": [
        "id",
        "type",
        "name",
        "shortName",
        "unit"
      ],
      "properties": {
        "id": {
          "$ref": "definitions.json#/interoperability/sensor/id"
        },
        "type": {
          "$ref": "definitions.json#/interoperability/sensor/type"
        },
        "name": {
          "$ref": "definitions.json#/interoperability/sensor/name"
        },
        "shortName": {
          "$ref": "definitions.json#/interoperability/sensor/shortName"
        },
        "value": {
          "$ref": "definitions.json#/interoperability/sensor/value"
        },
        "unit": {
          "$ref": "definitions.json#/interoperability/sensor/unit"
        },
        "breakdown": {
          "$ref": "definitions.json#/interoperability/sensor/genericReadout"
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Interoperability Standard Sensor - FRC response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqrfSensor_Frc" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/general/nAdr"
            },
            "pNum": {
              "$ref": "definitions.json#/general/response/pNum"
            },
            "pCmd": {
              "$ref": "definitions.json#/general/response/pCmd"
            },
            "hwpId": {
              "$ref": "definitions.json#/general/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/general/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/general/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "sensors"
              ],
              "additionalProperties": false,
              "properties": {
                "sensors": {
                  "title": "Sensors",
                  "description": "Array of sensor objects.",
                  "type": "array",
                  "additionalItems": false,
                  "items": {
                    "oneOf": [
                      {
                        "title": "Unavailable",
                        "description": "Sensor data not available at the node",
                        "type": "null"
                      },
                      { "$ref": "#/$localDefinitions/sensor" },
                      {
                        "title": "SensorAtNode",
                        "description": "Sensor data with node determination",
                        "type": "object",
                        "required": [
                          "nAdr",
                          "sensor"
                        ],
                        "properties": {
                          "nAdr": {
                            "type": "integer",
                            "description": "Node address."
                          },
                          "mid": {
                            "description": "Node module ID.",
                            "oneOf": [
                              { "type": "null" },
                              {
                                "type": "object",
                                "description": "Arbitrary user defined meta data."
                              }
                            ]
                          },
                          "sensor": {
                            "oneOf": [
                              { "type": "null" },
                              { "$ref": "#/$localDefinitions/sensor" }
                            ]
                          }
                        }
                      }
                    ]
                  }
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/general/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/general/timeout"
        }
      }
    }
  },
  "$localDefinitions": {
    "sensor": {
      "title": "Sensor",
      "description": "Contains data from one sensor",
      "type": "object",
      "required": [
        "id",
        "type",
        "name",
        "shortName",
        "unit"
      ],
      "properties": {
        "id": {
          "description": "Value type as text id.",
          "type": "string"
        },
        "type": {
          "description": "Value type of the sensor (quantity).",
          "type": "integer"
        },
        "name": {
          "description": "Name of the sensor (quantity).",
          "type": "string"
        },
        "shortName": {
          "description": " Short name of the sensor (quantity). Typically it is a symbol used at physics.",
          "type": "string"
        },
        "value": {
          "description": "Value of the sensor.",
          "oneOf": [
            { "type": "null" },
            { "type": "number" }
          ]
        },
        "unit": {
          "description": "Unit of the quantity. Dimensionless quantities has \"\".",
          "type": "string"
        },
        "breakdown": {
          "description": "Parsed generic types if present in device response.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "integer",
                "description": "Value type of the sensor (quantity)."
              },
              "name": {
                "type": "string",
                "description": "Name of the sensor (quantity)."
              },
              "shortName": {
                "type": "string",
                "description": " Short name of the sensor (quantity). Typically it is a symbol used at physics."
              },
              "value": {
                "description": "Value of the sensor.",
                "oneOf": [
                  { "type": "null" },
                  { "type": "number" }
                ]
              },
              "unit": {
                "type": "string",
                "description": "Unit of the quantity. Dimensionless quantities has \"\"."
              }
            }
          }
        }
      }
    }
  }
}

{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQRF Sensor - Frc",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Standard peripheral Sensor - FRC response.",
			"const": "iqrfSensor_Frc"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"rsp",
				"status"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"rsp": {
					"$id": "#/properties/data/properties/rsp",
					"title": "Response data",
					"description": "Response body object",
					"type": "object",
					"required": [
						"nAdr",
						"hwpId",
						"rCode",
						"dpaVal"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/embed/coordinator/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/response/hwpId"},
						"rCode": {"$ref": "file://definitions.json#/general/response/rCode"},
						"dpaVal": {"$ref": "file://definitions.json#/general/response/dpaVal"},
						"result": {
							"$id": "#/properties/data/properties/rsp/properties/result",
							"title": "Result object",
							"description": "Request result data.",
							"type": "object",
							"required": [
								"sensors"
							],
							"additionalProperties": false,
							"properties": {
								"sensors": {
									"$id": "#/properties/data/properties/rsp/properties/result/properties/sensors",
									"title": "Array of Sensor data",
									"description": "Returns array of objects for every sensor, see its description.",
									"type": "array",
									"additionalItems": false,
									"items": {
										"$id": "#/properties/data/properties/rsp/properties/result/properties/sensors/items",
										"oneOf": [
											{
												"title": "No sensor data",
												"description": "Sensor type not implemented by this device.",
												"type": "null"
											},
											{
												"title": "Base sensor data",
												"description": "Default sensor object without additional information.",
												"type": "object",
												"required": [
													"id",
													"type",
													"name",
													"shortName",
													"value",
													"unit"
												],
												"additionalProperties": false,
												"properties": {
													"id": {"$ref": "file://definitions.json#/standard/sensor/id"},
													"type": {"$ref": "file://definitions.json#/standard/sensor/type"},
													"name": {"$ref": "file://definitions.json#/standard/sensor/name"},
													"shortName": {"$ref": "file://definitions.json#/standard/sensor/shortName"},
													"value": {"$ref": "file://definitions.json#/standard/sensor/value"},
													"unit": {"$ref": "file://definitions.json#/standard/sensor/unit"},
													"decimalPlaces": {"$ref": "file://definitions.json#/standard/sensor/decimalPlaces"},
													"breakdown": {
														"title": "Sensor breakdowns",
														"description": "Breakdowns of sensor type in case of a generic type, such as BINARY_DATA.",
														"type": "array",
														"items": {
															"type": "object",
															"required": [
																"id",
																"type",
																"name",
																"shortName",
																"value",
																"unit"
															],
															"additionalProperties": false,
															"properties": {
																"id": {"$ref": "file://definitions.json#/standard/sensor/id"},
																"type": {"$ref": "file://definitions.json#/standard/sensor/type"},
																"name": {"$ref": "file://definitions.json#/standard/sensor/name"},
																"shortName": {"$ref": "file://definitions.json#/standard/sensor/shortName"},
																"value": {"$ref": "file://definitions.json#/standard/sensor/value"},
																"unit": {"$ref": "file://definitions.json#/standard/sensor/unit"},
																"decimalPlaces": {"$ref": "file://definitions.json#/standard/sensor/decimalPlaces"}
															}
														}
													}
												}
											},
											{
												"title": "Extended sensor data",
												"description": "Sensor data object with additional information about the device.",
												"type": "object",
												"required": [
													"nAdr",
													"sensor"
												],
												"additionalProperties": false,
												"properties": {
													"nAdr": {"$ref": "file://definitions.json#/general/nAdr"},
													"metaData": {"$ref": "file://definitions.json#/general/metaData"},
													"sensor": {
														"oneOf": [
															{
																"title": "No sensor data",
																"description": "Sensor type not implemented by this device.",
																"type": "null"
															},
															{
																"title": "Sensor data",
																"description": "Sensor data object.",
																"type": "object",
																"required": [
																	"id",
																	"type",
																	"name",
																	"shortName",
																	"value",
																	"unit"
																],
																"additionalProperties": false,
																"properties": {
																	"id": {"$ref": "file://definitions.json#/standard/sensor/id"},
																	"type": {"$ref": "file://definitions.json#/standard/sensor/type"},
																	"name": {"$ref": "file://definitions.json#/standard/sensor/name"},
																	"shortName": {"$ref": "file://definitions.json#/standard/sensor/shortName"},
																	"value": {"$ref": "file://definitions.json#/standard/sensor/value"},
																	"unit": {"$ref": "file://definitions.json#/standard/sensor/unit"},
																	"decimalPlaces": {"$ref": "file://definitions.json#/standard/sensor/decimalPlaces"},
																	"breakdown": {
																		"title": "Sensor breakdowns",
																		"description": "Breakdowns of sensor type in case of a generic type, such as BINARY_DATA.",
																		"type": "array",
																		"items": {
																			"type": "object",
																			"required": [
																				"id",
																				"type",
																				"name",
																				"shortName",
																				"value",
																				"unit"
																			],
																			"properties": {
																				"id": {"$ref": "file://definitions.json#/standard/sensor/id"},
																				"type": {"$ref": "file://definitions.json#/standard/sensor/type"},
																				"name": {"$ref": "file://definitions.json#/standard/sensor/name"},
																				"shortName": {"$ref": "file://definitions.json#/standard/sensor/shortName"},
																				"value": {"$ref": "file://definitions.json#/standard/sensor/value"},
																				"unit": {"$ref": "file://definitions.json#/standard/sensor/unit"},
																				"decimalPlaces": {"$ref": "file://definitions.json#/standard/sensor/decimalPlaces"}
																			}
																		}
																	}
																}
															}
														]
													}
												}
											}
										]
									}
								}
							}
						},
						"errorStr": {"$ref": "file://definitions.json#/general/response/errorStr"}
					}
				},
				"raw": {"$ref": "file://definitions.json#/general/response/raw"},
				"insId": {"$ref": "file://definitions.json#/general/response/insId"},
				"status": {"$ref": "file://definitions.json#/general/response/status"},
				"statusStr": {"$ref": "file://definitions.json#/general/response/statusStr"},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"}
			}
		}
	}
}

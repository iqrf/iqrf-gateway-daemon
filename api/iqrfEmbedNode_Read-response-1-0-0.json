{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Peripheral Node - Read response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqrfEmbedNode_Read" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nAdr",
            "pNum",
            "pCmd",
            "hwpId",
            "rCode",
            "dpaVal"
          ],
          "additionalProperties": false,
          "properties": {
            "nAdr": {
              "$ref": "definitions.json#/node/address"
            },
            "pNum": {
              "$ref": "definitions.json#/peripheral/number"
            },
            "pCmd": {
              "$ref": "definitions.json#/peripheral/command"
            },
            "hwpId": {
              "$ref": "definitions.json#/response/hwpId"
            },
            "rCode": {
              "$ref": "definitions.json#/response/rCode"
            },
            "dpaVal": {
              "$ref": "definitions.json#/response/dpaVal"
            },
            "result": {
              "title": "Result",
              "description": "Contains the results of the request",
              "type": "object",
              "required": [
                "ntwADDR",
                "ntwVRN",
                "ntwZIN",
                "ntwDID",
                "ntwPVRN",
                "ntwUSERADDRESS",
                "ntwID",
                "ntwVRNFNZ",
                "ntwCFG",
                "flags"
              ],
              "additionalProperties": false,
              "properties": {
                "ntwADDR": {
                  "type": "integer",
                  "description": "Network address.",
                  "minimum": 0,
                  "maximum": 255
                },
                "ntwVRN": {
                  "type": "integer",
                  "description": "Virtual routing number.",
                  "minimum": 0,
                  "maximum": 255
                },
                "ntwZIN": {
                  "type": "integer",
                  "description": "Zone index.",
                  "minimum": 0,
                  "maximum": 255
                },
                "ntwDID": {
                  "type": "integer",
                  "description": "Discovery id.",
                  "minimum": 0,
                  "maximum": 255
                },
                "ntwPVRN": {
                  "type": "integer",
                  "description": "Parent virtual routing number.",
                  "minimum": 0,
                  "maximum": 255
                },
                "ntwUSERADDRESS": {
                  "type": "integer",
                  "description": "User address 2B.",
                  "minimum": 0,
                  "maximum": 65535
                },
                "ntwID": {
                  "type": "integer",
                  "description": "Network identification (NID0/NID1).",
                  "minimum": 0,
                  "maximum": 65535
                },
                "ntwVRNFNZ": {
                  "type": "integer",
                  "description": "VRN of first Node in given zone.",
                  "minimum": 0,
                  "maximum": 255
                },
                "ntwCFG": {
                  "type": "integer",
                  "description": "Network configuration.",
                  "minimum": 0,
                  "maximum": 255
                },
                "flags": {
                  "type": "integer",
                  "description": "Indicates whether the Node device is bonded.",
                  "minimum": 0,
                  "maximum": 255
                }
              }
            },
            "errorStr": {
              "$ref": "definitions.json#/response/errorStr"
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/response/statusStr"
        },
        "timeout": {
          "$ref": "definitions.json#/dpa/timeout"
        }
      }
    }
  }
}

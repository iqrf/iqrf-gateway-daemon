{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Maintenance: Inconsistent MIDs in Coordinator response",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/general/mType" },
        { "const": "iqmeshNetwork_MaintenanceInconsistentMIDsInCoord" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Message metadata and body",
      "type": "object",
      "required": [
        "msgId",
        "rsp",
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/general/msgId"
        },
        "rsp": {
          "title": "Response",
          "description": "Holds response data",
          "type": "object",
          "required": [
            "nodesNr"
          ],
          "additionalProperties": false,
          "properties": {
            "nodesNr": {
              "$ref": "definitions.json#/iqmesh/nodesNr"
            },
            "inaccessibleNodesNr": {
              "$ref": "definitions.json#/iqmesh/inaccessibleNodesNr"
            },
            "inconsistentNodesNr": {
              "title": "Inconsistent MID node count",
              "description": "Number of nodes whose MID was inconsistent.",
              "type": "integer",
              "minimum": 0,
              "maximum": 239
            },
            "inaccessibleNodes": {
              "title": "Inaccessible nodes list",
              "description": "List of nodes that didn't respond to FRC.",
              "type": "array",
              "items": {
                "$ref": "definitions.json#/node/address"
              },
              "minItems": 0,
              "maxItems": 239
            },
            "inconsistentNodes": {
              "title": "Inconsistent nodes list",
              "description": "List of nodes whose MID was inconsistent.",
              "type": "array",
              "items": {
                "$ref": "definitions.json#/node/address"
              },
              "minItems": 0,
              "maxItems": 239
            }
          }
        },
        "raw": {
          "$ref": "definitions.json#/general/response/raw"
        },
        "insId": {
          "$ref": "definitions.json#/general/response/insId"
        },
        "status": {
          "$ref": "definitions.json#/general/response/status"
        },
        "statusStr": {
          "$ref": "definitions.json#/general/response/statusStr"
        }
      }
    }
  }
}

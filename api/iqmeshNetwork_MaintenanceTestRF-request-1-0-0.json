{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "IQMESH Network - Maintenance: Test RF Signal request",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "iqmeshNetwork_MaintenanceTestRF" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Contains the message payload.",
      "type": "object",
      "required": [
        "msgId",
        "req"
      ],
      "additionalProperties": false,
      "properties": {
        "msgId": {
          "$ref": "definitions.json#/message/id"
        },
        "req": {
          "title": "Request",
          "description": "Contains request specific parameters.",
          "type": "object",
          "required": [
            "deviceAddr",
            "rfChannel",
            "rxFilter",
            "measurementTime"
          ],
          "additionalProperties": false,
          "properties": {
            "deviceAddr": {
              "title": "Device address",
              "description": "Address of device (0 - [C] device, 255 - all [N] devices)",
              "type": "integer",
              "enum": [
                0,
                255
              ],
              "default": 0
            },
            "rfChannel": {
              "title": "RF channel",
              "description": "RF channel to test.",
              "type": "integer",
              "minimum": 0,
              "maximum": 255,
              "default": 0
            },
            "rxFilter": {
              "title": "RX filter",
              "description": "RX filter.",
              "type": "integer",
              "minimum": 0,
              "maximum": 64,
              "default": 0
            },
            "measurementTime": {
              "title": "Measurement time",
              "description": "Measurement time specified in miliseconds.",
              "type": "integer",
              "enum": [
                40,
                360,
                680,
                1320,
                2600,
                5160,
                10280,
                20620
              ],
              "default": 40
            }
          }
        },
        "repeat": {
          "$ref": "definitions.json#/iqmesh/repeat"
        },
        "returnVerbose": {
          "$ref": "definitions.json#/request/returnVerbose"
        }
      }
    }
  }
}

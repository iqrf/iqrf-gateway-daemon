{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Daemon monitoring - Notification message.",
  "description": "(c) IQRF Tech",
  "type": "object",
  "required": [
    "mType",
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "mType": {
      "allOf": [
        { "$ref": "definitions.json#/message/type" },
        { "const": "ntfDaemon_Monitor" }
      ]
    },
    "data": {
      "title": "Message data",
      "description": "Daemon monitoring notification information.",
      "type": "object",
      "required": [
        "num",
        "timestamp",
        "dpaQueueLen",
        "iqrfChannelState",
        "dpaChannelState",
        "managementQueueLen",
        "networkQueueLen",
        "operMode"
      ],
      "additionalProperties": false,
      "properties": {
        "num": {
          "title": "Message counter",
          "description": "Ever increasing counter of messages, which counts from zero at start-up.",
          "type": "integer"
        },
        "timestamp": {
          "title": "Timestamp",
          "description": "Time since epoch in seconds (Unix time).",
          "type": "integer"
        },
        "dpaQueueLen": {
          "title": "DPA queue length",
          "description": "Length of pending DPA transaction queue (16 is maximum).",
          "type": "integer"
        },
        "iqrfChannelState": {
          "title": "IQRF channel state",
          "description": "State (Ready/NotReady/ExclusiveAccess) of IQRF channel.",
          "type": "string"
        },
        "dpaChannelState": {
          "title": "DPA channel state",
          "description": "State (Ready/NotReady/ExclusiveAccess) of DPA channel - one of USB CDC, SPI or UART interface.",
          "type": "string"
        },
        "managementQueueLen": {
          "title": "Management message queue length",
          "description": "Length of pending API management message queue.",
          "type": "integer"
        },
        "networkQueueLen": {
          "title": "Network message queue length",
          "description": "Length of pending API network message queue.",
          "type": "integer"
        },
        "operMode": {
          "title": "Operational mode",
          "description": "Daemon mode (operational/service/forwarding).",
          "type": "string"
        },
        "enumInProgress": {
          "description": "Enumeration is currently running.",
          "type": "boolean"
        },
        "dataReadingInProgress": {
          "description": "Data read is currently running.",
          "type": "boolean"
        }
      }
    }
  }
}

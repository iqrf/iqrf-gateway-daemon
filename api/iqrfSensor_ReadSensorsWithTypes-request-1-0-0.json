{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "IQRF Sensor - ReadSensorsWithTypes",
	"type": "object",
	"required": [
		"mType",
		"data"
	],
	"additionalProperties": false,
	"properties": {
		"mType": {
			"$ref": "file://definitions.json#/general/mType",
			"description": "Standard peripheral Sensor - Read with Types request.",
			"const": "iqrfSensor_ReadSensorsWithTypes"
		},
		"data": {
			"$id": "#/properties/data",
			"title": "Message data",
			"description": "Message metadata and body",
			"type": "object",
			"required": [
				"msgId",
				"req"
			],
			"additionalProperties": false,
			"properties": {
				"msgId": {"$ref": "file://definitions.json#/general/msgId"},
				"req": {
					"$id": "#/properties/data/properties/req",
					"title": "Request data",
					"description": "Request body object",
					"type": "object",
					"required": [
						"nAdr",
						"param"
					],
					"additionalProperties": false,
					"properties": {
						"nAdr": {"$ref": "file://definitions.json#/general/nAdr"},
						"hwpId": {"$ref": "file://definitions.json#/general/request/hwpId"},
						"param": {
							"$id": "#/properties/data/properties/req/properties/param",
							"title": "Request parameters",
							"description": "Request message configuration parameters.",
							"type": "object",
							"required": [
								"sensorIndexes"
							],
							"additionalProperties": false,
							"properties": {
								"sensorIndexes": {
									"$id": "#/properties/data/properties/req/properties/param/properties/sensorIndexes",
									"title": "Selected sensors",
									"description": "Specifies sensors to read data from. Value can be either number -1 to read all sensors, or array of integers specifying sensor (quantity) types to read.",
									"oneOf": [
										{
											"type": "integer",
											"const": -1
										},
										{
											"type": "array",
											"minItems": 1,
											"additionalItems": false,
											"items": {"$ref": "file://definitions.json#/standard/sensor/index"}
										}
									]
								}
							}
						}
					}
				},
				"timeout": {"$ref": "file://definitions.json#/general/timeout"},
				"returnVerbose": {"$ref": "file://definitions.json#/general/request/returnVerbose"}
			}
		}
	}
}
